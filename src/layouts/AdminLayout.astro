---
interface Props {
  title: string;
  currentPage?: 'dashboard' | 'newcentre-updates' | 'media' | 'cms';
}

const { title, currentPage = 'dashboard' } = Astro.props;

const navItems = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'ğŸ ' },
  { id: 'newcentre-updates', label: 'New Centre Updates', href: '/admin/newcentre-updates', icon: 'ğŸ—ï¸' },
  { id: 'media', label: 'Media Library', href: '/admin/media', icon: 'ğŸ–¼ï¸' },
  { id: 'cms', label: 'Content CMS', href: '/admin/cms', icon: 'ğŸ“' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - OIAC Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .nav-item {
      transition: all 0.2s ease;
    }
    .nav-item:hover {
      background-color: rgba(255,255,255,0.1);
    }
    .nav-item.active {
      background-color: rgba(255,255,255,0.2);
      border-left: 3px solid white;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Top Navigation Bar -->
  <nav class="bg-gradient-to-r from-blue-800 to-blue-900 text-white shadow-lg">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between h-16">
        <!-- Logo/Title -->
        <a href="/admin" class="flex items-center gap-3 hover:opacity-90">
          <span class="text-2xl">âš™ï¸</span>
          <span class="font-bold text-lg">OIAC Admin</span>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center gap-1">
          {navItems.map(item => (
            <a
              href={item.href}
              class:list={[
                "nav-item px-4 py-2 rounded-lg flex items-center gap-2 text-sm font-medium",
                currentPage === item.id && "active bg-white/20"
              ]}
            >
              <span>{item.icon}</span>
              <span>{item.label}</span>
            </a>
          ))}
        </div>

        <!-- View Site Link -->
        <a href="/" class="hidden md:flex items-center gap-2 px-4 py-2 bg-white/10 hover:bg-white/20 rounded-lg text-sm">
          <span>ğŸ‘ï¸</span>
          <span>View Site</span>
        </a>

        <!-- Mobile Menu Button -->
        <button id="mobileMenuBtn" class="md:hidden p-2 rounded-lg hover:bg-white/10">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobileMenu" class="hidden md:hidden pb-4">
        {navItems.map(item => (
          <a
            href={item.href}
            class:list={[
              "block px-4 py-3 rounded-lg flex items-center gap-3",
              currentPage === item.id ? "bg-white/20" : "hover:bg-white/10"
            ]}
          >
            <span>{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))}
        <div class="border-t border-white/20 mt-2 pt-2">
          <a href="/" class="block px-4 py-3 rounded-lg flex items-center gap-3 hover:bg-white/10">
            <span>ğŸ‘ï¸</span>
            <span>View Site</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-8">
    <slot />
  </main>

  <script is:inline>
    // Mobile menu toggle
    document.getElementById('mobileMenuBtn')?.addEventListener('click', () => {
      document.getElementById('mobileMenu')?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
