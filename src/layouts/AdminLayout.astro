---
interface Props {
  title: string;
  currentPage?: 'dashboard' | 'newcentre-updates' | 'media' | 'cms';
}

const { title, currentPage = 'dashboard' } = Astro.props;

const navItems = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'üè†' },
  { id: 'newcentre-updates', label: 'New Centre Updates', href: '/admin/newcentre-updates', icon: 'üèóÔ∏è' },
  { id: 'media', label: 'Media Library', href: '/admin/media', icon: 'üñºÔ∏è' },
  { id: 'cms', label: 'Content CMS', href: '/admin/cms', icon: 'üìù' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - OIAC Admin</title>
  <style>
    /* Base styles - inline to ensure they work */
    * { box-sizing: border-box; margin: 0; padding: 0; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background-color: #f3f4f6;
      min-height: 100vh;
    }
    .admin-nav {
      background: linear-gradient(to right, #1e40af, #1e3a8a);
      color: white;
      box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1);
    }
    .admin-nav-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 16px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      height: 64px;
    }
    .admin-nav-brand {
      display: flex;
      align-items: center;
      gap: 12px;
      color: white;
      text-decoration: none;
      font-weight: bold;
      font-size: 18px;
    }
    .admin-nav-brand:hover { opacity: 0.9; }
    .admin-nav-links {
      display: flex;
      align-items: center;
      gap: 4px;
    }
    .admin-nav-link {
      color: white;
      text-decoration: none;
      font-size: 14px;
      padding: 8px 16px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: background 0.2s;
    }
    .admin-nav-link:hover { background: rgba(255,255,255,0.1); }
    .admin-nav-link.active { background: rgba(255,255,255,0.2); }
    .admin-nav-site {
      color: white;
      text-decoration: none;
      font-size: 14px;
      padding: 8px 16px;
      border-radius: 8px;
      background: rgba(255,255,255,0.1);
      display: flex;
      align-items: center;
      gap: 8px;
    }
    .admin-nav-site:hover { background: rgba(255,255,255,0.2); }
    .mobile-menu-btn {
      display: none;
      padding: 8px;
      border-radius: 8px;
      background: none;
      border: none;
      cursor: pointer;
      color: white;
    }
    .mobile-menu-btn:hover { background: rgba(255,255,255,0.1); }
    .mobile-menu {
      display: none;
      padding-bottom: 16px;
    }
    .mobile-menu a {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      color: white;
      text-decoration: none;
      border-radius: 8px;
    }
    .mobile-menu a:hover { background: rgba(255,255,255,0.1); }
    .mobile-menu a.active { background: rgba(255,255,255,0.2); }
    .mobile-menu-divider {
      border-top: 1px solid rgba(255,255,255,0.2);
      margin-top: 8px;
      padding-top: 8px;
    }
    .admin-main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 32px 16px;
    }
    @media (max-width: 768px) {
      .admin-nav-links { display: none; }
      .admin-nav-site { display: none; }
      .mobile-menu-btn { display: block; }
      .mobile-menu.open { display: block; }
    }
  </style>
</head>
<body>
  <!-- Top Navigation Bar -->
  <nav class="admin-nav">
    <div class="admin-nav-container">
      <!-- Logo/Title -->
      <a href="/admin" class="admin-nav-brand">
        <span style="font-size: 24px;">‚öôÔ∏è</span>
        <span>OIAC Admin</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="admin-nav-links">
        {navItems.map(item => (
          <a href={item.href} class={`admin-nav-link ${currentPage === item.id ? 'active' : ''}`}>
            <span>{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))}
      </div>

      <!-- View Site Link -->
      <a href="/" class="admin-nav-site">
        <span>üëÅÔ∏è</span>
        <span>View Site</span>
      </a>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" onclick="document.getElementById('mobileMenu').classList.toggle('open')">
        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobileMenu" class="mobile-menu">
      {navItems.map(item => (
        <a href={item.href} class={currentPage === item.id ? 'active' : ''}>
          <span>{item.icon}</span>
          <span>{item.label}</span>
        </a>
      ))}
      <div class="mobile-menu-divider">
        <a href="/">
          <span>üëÅÔ∏è</span>
          <span>View Site</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="admin-main">
    <slot />
  </main>
</body>
</html>
