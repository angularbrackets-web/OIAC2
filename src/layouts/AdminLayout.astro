---
interface Props {
  title: string;
  currentPage?: 'dashboard' | 'newcentre-updates' | 'media' | 'cms';
}

const { title, currentPage = 'dashboard' } = Astro.props;

const navItems = [
  { id: 'dashboard', label: 'Dashboard', href: '/admin', icon: 'ğŸ ' },
  { id: 'newcentre-updates', label: 'New Centre Updates', href: '/admin/newcentre-updates', icon: 'ğŸ—ï¸' },
  { id: 'media', label: 'Media Library', href: '/admin/media', icon: 'ğŸ–¼ï¸' },
  { id: 'cms', label: 'Content CMS', href: '/admin/cms', icon: 'ğŸ“' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} - OIAC Admin</title>
  <style is:inline>
    /* Admin styles - is:inline prevents Astro processing, !important overrides Tailwind */
    .admin-nav {
      background: linear-gradient(to right, #1e40af, #1e3a8a) !important;
      color: white !important;
      box-shadow: 0 4px 6px -1px rgba(0,0,0,0.1) !important;
      margin: 0 !important;
      padding: 0 !important;
    }
    .admin-nav-container {
      max-width: 1200px !important;
      margin: 0 auto !important;
      padding: 0 16px !important;
      display: flex !important;
      align-items: center !important;
      justify-content: space-between !important;
      height: 64px !important;
    }
    .admin-nav-brand {
      display: flex !important;
      align-items: center !important;
      gap: 12px !important;
      color: white !important;
      text-decoration: none !important;
      font-weight: bold !important;
      font-size: 18px !important;
    }
    .admin-nav-brand:hover { opacity: 0.9 !important; }
    .admin-nav-links {
      display: flex !important;
      align-items: center !important;
      gap: 4px !important;
    }
    .admin-nav-link {
      color: white !important;
      text-decoration: none !important;
      font-size: 14px !important;
      padding: 8px 16px !important;
      border-radius: 8px !important;
      display: flex !important;
      align-items: center !important;
      gap: 8px !important;
      transition: background 0.2s !important;
      background: transparent !important;
    }
    .admin-nav-link:hover { background: rgba(255,255,255,0.1) !important; }
    .admin-nav-link.active { background: rgba(255,255,255,0.2) !important; }
    .admin-nav-site {
      color: white !important;
      text-decoration: none !important;
      font-size: 14px !important;
      padding: 8px 16px !important;
      border-radius: 8px !important;
      background: rgba(255,255,255,0.1) !important;
      display: flex !important;
      align-items: center !important;
      gap: 8px !important;
    }
    .admin-nav-site:hover { background: rgba(255,255,255,0.2) !important; }
    .admin-nav-actions {
      display: flex !important;
      align-items: center !important;
      gap: 8px !important;
    }
    .admin-nav-logout {
      color: white !important;
      text-decoration: none !important;
      font-size: 18px !important;
      padding: 8px 12px !important;
      border-radius: 8px !important;
      background: rgba(239,68,68,0.2) !important;
      display: flex !important;
      align-items: center !important;
      transition: background 0.2s !important;
    }
    .admin-nav-logout:hover { background: rgba(239,68,68,0.4) !important; }
    .mobile-menu-btn {
      display: none !important;
      padding: 8px !important;
      border-radius: 8px !important;
      background: none !important;
      border: none !important;
      cursor: pointer !important;
      color: white !important;
    }
    .mobile-menu-btn:hover { background: rgba(255,255,255,0.1) !important; }
    .mobile-menu {
      display: none !important;
      padding: 0 16px 16px 16px !important;
    }
    .mobile-menu a {
      display: flex !important;
      align-items: center !important;
      gap: 12px !important;
      padding: 12px 16px !important;
      color: white !important;
      text-decoration: none !important;
      border-radius: 8px !important;
    }
    .mobile-menu a:hover { background: rgba(255,255,255,0.1) !important; }
    .mobile-menu a.active { background: rgba(255,255,255,0.2) !important; }
    .mobile-menu-divider {
      border-top: 1px solid rgba(255,255,255,0.2) !important;
      margin-top: 8px !important;
      padding-top: 8px !important;
    }
    .admin-main {
      max-width: 1200px !important;
      margin: 0 auto !important;
      padding: 32px 16px !important;
    }
    @media (max-width: 768px) {
      .admin-nav-links { display: none !important; }
      .admin-nav-actions { display: none !important; }
      .mobile-menu-btn { display: block !important; }
      .mobile-menu.open { display: block !important; }
    }
  </style>
</head>
<body>
  <!-- Top Navigation Bar -->
  <nav class="admin-nav">
    <div class="admin-nav-container">
      <!-- Logo/Title -->
      <a href="/admin" class="admin-nav-brand">
        <span style="font-size: 24px;">âš™ï¸</span>
        <span>OIAC Admin</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="admin-nav-links">
        {navItems.map(item => (
          <a href={item.href} class={`admin-nav-link ${currentPage === item.id ? 'active' : ''}`}>
            <span>{item.icon}</span>
            <span>{item.label}</span>
          </a>
        ))}
      </div>

      <!-- View Site & Logout -->
      <div class="admin-nav-actions">
        <a href="/" class="admin-nav-site">
          <span>ğŸ‘ï¸</span>
          <span>View Site</span>
        </a>
        <a href="/api/admin/logout" class="admin-nav-logout" title="Logout">
          ğŸšª
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="mobile-menu-btn" onclick="document.getElementById('mobileMenu').classList.toggle('open')">
        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobileMenu" class="mobile-menu">
      {navItems.map(item => (
        <a href={item.href} class={currentPage === item.id ? 'active' : ''}>
          <span>{item.icon}</span>
          <span>{item.label}</span>
        </a>
      ))}
      <div class="mobile-menu-divider">
        <a href="/">
          <span>ğŸ‘ï¸</span>
          <span>View Site</span>
        </a>
        <a href="/api/admin/logout" style="color: #fca5a5 !important;">
          <span>ğŸšª</span>
          <span>Logout</span>
        </a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="admin-main">
    <slot />
  </main>
</body>
</html>
