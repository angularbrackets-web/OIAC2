---
import { getActiveAnnouncement } from '../lib/db';

const event = await getActiveAnnouncement();

let formattedDate = '';
if (event?.eventDate) {
  const d = new Date(event.eventDate + 'T00:00:00');
  formattedDate = d.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
}
---

{event && (
<div class="px-4 py-3 md:px-8 mx-auto mt-2">
  <div class="container mt-2">
    <div class="relative w-full bg-deepTeal text-white rounded-2xl shadow-xl overflow-hidden">

      {/* Blurred poster background overlay */}
      {event.posterImageUrl && (
      <div class="absolute inset-0">
        <img src={event.posterImageUrl} alt="" class="w-full h-full object-cover scale-110 blur-xl" loading="eager" />
        <div class="absolute inset-0 bg-deepTeal/65"></div>
      </div>
      )}

      <!-- Subtle accent stripe -->
      <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-softBeige/40 via-softBeige to-softBeige/40 z-10"></div>

      <div class="relative z-10 p-5 md:p-7 flex flex-col md:flex-row gap-5 items-center">

        <!-- Poster Image (if provided) -->
        {event.posterImageUrl && (
        <div class="flex-shrink-0">
          <img
            src={event.posterImageUrl}
            alt={event.title}
            class="w-36 h-48 md:w-40 md:h-52 object-cover rounded-xl shadow-md border border-white/15"
          />
        </div>
        )}

        <!-- Content -->
        <div class="flex-1 text-center md:text-left min-w-0">

          <!-- Title -->
          <h3 class="text-xl md:text-2xl font-bold text-softBeige leading-tight">
            {event.title}
          </h3>

          <!-- Date / Time / Venue — always visible -->
          {(formattedDate || event.eventTime || event.venue) && (
          <div class="mt-2 flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-white/85 justify-center md:justify-start">
            {formattedDate && (
            <span class="inline-flex items-center gap-1.5">
              <svg class="w-4 h-4 text-softBeige/70 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><rect width="18" height="18" x="3" y="3" rx="2" ry="2" stroke-width="1.5"></rect><path stroke-width="1.5" d="M16 2v4M8 2v4M3 10h18"></path></svg>
              {formattedDate}
            </span>
            )}
            {event.eventTime && (
            <span class="inline-flex items-center gap-1.5">
              <svg class="w-4 h-4 text-softBeige/70 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10" stroke-width="1.5"></circle><path stroke-width="1.5" d="M12 6v6l4 2"></path></svg>
              {event.eventTime}
            </span>
            )}
            {event.venue && (
            <span class="inline-flex items-center gap-1.5">
              <svg class="w-4 h-4 text-softBeige/70 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="1.5" d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3" stroke-width="1.5"></circle></svg>
              {event.venue}
            </span>
            )}
          </div>
          )}

          <!-- Description -->
          {event.description && (
          <p class="mt-3 text-sm text-white/75 leading-relaxed font-normal line-clamp-3">
            {event.description}
          </p>
          )}

          <!-- Actions row -->
          <div class="mt-4 flex flex-wrap items-center gap-3 justify-center md:justify-start">
            {/* Primary CTA — link button */}
            {event.linkUrl && (
            <a href={event.linkUrl} target="_blank" rel="noopener"
              class="inline-flex items-center gap-2 px-5 py-2.5 bg-softBeige text-terracottaRed-900 font-semibold text-sm rounded-lg hover:bg-white transition-colors shadow-sm">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
              {event.linkLabel || 'Learn More'}
            </a>
            )}

            {/* Contact — phone */}
            {event.contactPhone && (
            <a href={`tel:${event.contactPhone.replace(/[^+\d]/g, '')}`}
              class="inline-flex items-center gap-2 px-4 py-2 text-sm rounded-lg border border-white/20 hover:bg-white/10 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
              {event.contactPhone}
            </a>
            )}

            {/* Contact — email */}
            {event.contactEmail && (
            <a href={`mailto:${event.contactEmail}`}
              class="inline-flex items-center gap-2 px-4 py-2 text-sm rounded-lg border border-white/20 hover:bg-white/10 transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
              {event.contactEmail}
            </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
)}
