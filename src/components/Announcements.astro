---
const posterUrl = "https://eqifzqosnyhgglrkzkur.supabase.co/storage/v1/object/public/media/1770825226988_oiac_fundraiserdinner_28feb2026.jpeg";
---

<style>
@keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse-glow {
    0%, 100% {
        text-shadow: 0 0 5px rgba(217, 202, 182, 0.5);
    }
    50% {
        text-shadow: 0 0 20px rgba(217, 202, 182, 0.8), 0 0 30px rgba(217, 202, 182, 0.6);
    }
}

@keyframes cycleText {
    0%, 18% { opacity: 1; }
    20%, 98% { opacity: 0; }
    100% { opacity: 1; }
}

.animate-gradient {
    animation: gradient 6s ease infinite;
}

.animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
}

.animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
}

.animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
}

.cycling-text {
    position: relative;
    min-height: 2.5em;
}

.cycling-text span {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    animation: cycleText 20s infinite;
}

.cycling-text span:nth-child(1) { animation-delay: 0s; }
.cycling-text span:nth-child(2) { animation-delay: 4s; }
.cycling-text span:nth-child(3) { animation-delay: 8s; }
.cycling-text span:nth-child(4) { animation-delay: 12s; }
.cycling-text span:nth-child(5) { animation-delay: 16s; }
</style>

<div class="px-4 p-2 md:px-8 md:py-2 mx-auto mt-2">
    <div class="container mt-2">
        <div class="w-full bg-gradient-to-br from-black via-terracottaRed-darkest to-gray-900 bg-[length:400%_400%] animate-gradient text-white font-bold rounded-2xl shadow-2xl shadow-terracottaRed-500/30 border border-softBeige/20 relative overflow-hidden">
            <!-- Shimmer overlay -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent animate-shimmer"></div>

            <div class="p-5 md:p-8 rounded-2xl flex flex-col md:flex-row gap-6 items-center relative z-10">
                <!-- Poster Image -->
                <div class="flex-shrink-0">
                    <img
                        src={posterUrl}
                        alt="OIAC Fundraising Night - February 28, 2026"
                        class="w-48 h-64 md:w-44 md:h-60 object-cover rounded-xl shadow-lg border-2 border-softBeige/30"
                    />
                </div>

                <!-- Event Details -->
                <div class="flex-1 text-center md:text-left">
                    <!-- Cycling headlines -->
                    <h3 class="mb-3 text-lg md:text-2xl font-bold text-softBeige drop-shadow-lg animate-pulse-glow cycling-text">
                        <span>You Are Invited to Fundraising Night!</span>
                        <span>Saturday, February 28, 2026</span>
                        <span>1011 Parsons RD #110 SW, Edmonton</span>
                        <span>6:15 PM — Iftaar Time</span>
                        <span>Call 587-882-3202 for Details</span>
                    </h3>

                    <p class="mb-2 text-sm md:text-base font-medium drop-shadow-md animate-fade-in-up" style="animation-delay: 0.2s;">
                        Join us for a special Fundraising Night for your future Islamic School & Masjid!
                    </p>
                    <p class="mb-4 text-xs md:text-sm font-normal leading-relaxed drop-shadow-md animate-fade-in-up opacity-0" style="animation-delay: 0.4s;">
                        Be part of the legacy — the new Omar Ibn Al-Khattab Centre will be a place to pray, learn, and belong. Join OIAC for an inspiring evening of fellowship, delicious iftaar, and the opportunity to contribute to this transformative project for our community.
                    </p>

                    <!-- Contact info pills -->
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start animate-fade-in-up opacity-0" style="animation-delay: 0.6s;">
                        <a href="tel:5878823202" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 border border-softBeige/30 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            587-882-3202
                        </a>
                        <a href="mailto:info@oiacedmonton.ca" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 border border-softBeige/30 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            info@oiacedmonton.ca
                        </a>
                        <a href="https://www.oiacedmonton.ca" target="_blank" class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 border border-softBeige/30 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9"></path></svg>
                            oiacedmonton.ca
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
