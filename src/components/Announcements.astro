---
import { getActiveAnnouncement } from '../lib/db';

const event = await getActiveAnnouncement();

// Build cycling headlines from event data
const headlines: string[] = [];
if (event) {
  headlines.push(`You Are Invited to ${event.title}!`);
  if (event.eventDate) {
    const d = new Date(event.eventDate + 'T00:00:00');
    const formatted = d.toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' });
    headlines.push(formatted);
  }
  if (event.venue) headlines.push(event.venue);
  if (event.eventTime) headlines.push(event.eventTime);
  if (event.contactPhone) headlines.push(`Call ${event.contactPhone} for Details`);
}

// CSS cycling animation needs to know the count
const cycleTotal = headlines.length * 4; // 4s per headline
---

{event && (
<style define:vars={{ cycleTotal: `${cycleTotal}s` }}>
@keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

@keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
}

@keyframes fadeInUp {
    0% {
        opacity: 0;
        transform: translateY(20px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes pulse-glow {
    0%, 100% {
        text-shadow: 0 0 5px rgba(217, 202, 182, 0.5);
    }
    50% {
        text-shadow: 0 0 20px rgba(217, 202, 182, 0.8), 0 0 30px rgba(217, 202, 182, 0.6);
    }
}

@keyframes cycleText {
    0%, 18% { opacity: 1; }
    20%, 98% { opacity: 0; }
    100% { opacity: 1; }
}

.announce-animate-gradient {
    animation: gradient 6s ease infinite;
}

.announce-animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
}

.announce-animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
}

.announce-animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
}

.announce-cycling-text {
    position: relative;
    min-height: 2.5em;
}

.announce-cycling-text span {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    animation: cycleText var(--cycleTotal) infinite;
}

.announce-cycling-text span:nth-child(1) { animation-delay: 0s; }
.announce-cycling-text span:nth-child(2) { animation-delay: 4s; }
.announce-cycling-text span:nth-child(3) { animation-delay: 8s; }
.announce-cycling-text span:nth-child(4) { animation-delay: 12s; }
.announce-cycling-text span:nth-child(5) { animation-delay: 16s; }
</style>

<div class="px-4 p-2 md:px-8 md:py-2 mx-auto mt-2">
    <div class="container mt-2">
        <div class="w-full bg-gradient-to-br from-black via-terracottaRed-darkest to-gray-900 bg-[length:400%_400%] announce-animate-gradient text-white font-bold rounded-2xl shadow-2xl shadow-terracottaRed-500/30 border border-softBeige/20 relative overflow-hidden">
            <!-- Shimmer overlay -->
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent announce-animate-shimmer"></div>

            <div class="p-5 md:p-8 rounded-2xl flex flex-col md:flex-row gap-6 items-center relative z-10">
                <!-- Poster Image -->
                {event.posterImageUrl && (
                <div class="flex-shrink-0">
                    <img
                        src={event.posterImageUrl}
                        alt={event.title}
                        class="w-48 h-64 md:w-44 md:h-60 object-cover rounded-xl shadow-lg border-2 border-softBeige/30"
                    />
                </div>
                )}

                <!-- Event Details -->
                <div class="flex-1 text-center md:text-left">
                    <!-- Cycling headlines -->
                    <h3 class="mb-3 text-lg md:text-2xl font-bold text-softBeige drop-shadow-lg announce-animate-pulse-glow announce-cycling-text">
                        {headlines.map((h) => (
                            <span>{h}</span>
                        ))}
                    </h3>

                    {event.description && (
                    <p class="mb-4 text-xs md:text-sm font-normal leading-relaxed drop-shadow-md announce-animate-fade-in-up opacity-0" style="animation-delay: 0.2s;">
                        {event.description}
                    </p>
                    )}

                    <!-- Contact info pills + ticket -->
                    <div class="flex flex-wrap gap-3 justify-center md:justify-start announce-animate-fade-in-up opacity-0" style="animation-delay: 0.4s;">
                        {event.linkUrl && (
                        <a href={event.linkUrl} target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-5 py-2 rounded-full bg-softBeige/20 hover:bg-softBeige/30 border border-softBeige/40 text-sm font-semibold transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                            {event.linkLabel || 'Learn More'}
                        </a>
                        )}
                        {event.contactPhone && (
                        <a href={`tel:${event.contactPhone.replace(/[^+\d]/g, '')}`} class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 border border-softBeige/30 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            {event.contactPhone}
                        </a>
                        )}
                        {event.contactEmail && (
                        <a href={`mailto:${event.contactEmail}`} class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 hover:bg-white/20 border border-softBeige/30 text-sm transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            {event.contactEmail}
                        </a>
                        )}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
)}
