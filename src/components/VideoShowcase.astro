---
// Video Showcase Component
import EventThumbnail from '../assets/OIAC.Fundraiser.AhmedShehab.png';

const videos = [
    {
        id: 'event-highlights',
        title: 'Fundraiser Event Highlights',
        description: 'Watch the beautiful moments from our September 28th fundraising dinner',
        url: 'https://www.facebook.com/share/v/1NVdYz48Pp/',
        thumbnail: EventThumbnail.src,
        featured: true,
        type: 'facebook'
    },
    {
        id: 'summer-camp',
        title: 'Summer Camp 2024',
        description: 'See our students learning and growing in faith',
        url: 'https://youtu.be/ZySR5DexpzE',
        thumbnail: 'https://img.youtube.com/vi/ZySR5DexpzE/maxresdefault.jpg',
        featured: false,
        type: 'youtube'
    },
    {
        id: 'oiac-academy',
        title: 'OIAC Academy',
        description: 'Discover our educational programs and curriculum',
        url: 'https://youtu.be/-WjaHBGu26c',
        thumbnail: 'https://img.youtube.com/vi/-WjaHBGu26c/maxresdefault.jpg',
        featured: false,
        type: 'youtube'
    },
    {
        id: 'construction-update',
        title: 'Construction Progress',
        description: 'Latest updates on our new Islamic Centre',
        url: 'https://youtu.be/Pu5zk4F6vMs',
        thumbnail: 'https://img.youtube.com/vi/Pu5zk4F6vMs/maxresdefault.jpg',
        featured: false,
        type: 'youtube'
    }
];
---

<style>
@keyframes play-pulse {
    0%, 100% { transform: scale(1); opacity: 0.9; }
    50% { transform: scale(1.1); opacity: 1; }
}

@keyframes card-lift {
    0% { transform: translateY(0); }
    100% { transform: translateY(-8px); }
}

.video-card {
    transition: all 0.3s ease;
}

.video-card:hover {
    animation: card-lift 0.3s forwards;
}

.video-card:hover .play-button {
    animation: play-pulse 1s ease-in-out infinite;
}

.play-button {
    transition: all 0.3s ease;
}

.video-thumbnail {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    overflow: hidden;
}

.video-thumbnail img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.share-button {
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
}

.video-card:hover .share-button {
    opacity: 1;
    transform: translateY(0);
}
</style>

<section class="py-16 px-4 md:px-8 bg-gray-50">
    <div class="container mx-auto max-w-7xl">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4">
                See Our Journey in Action
                <span class="inline-block ml-2">▶️</span>
            </h2>
            <p class="text-gray-600 text-base md:text-lg max-w-2xl mx-auto">
                Watch how your support is transforming lives and building the future of Islamic education in South Edmonton
            </p>
        </div>

        <!-- Videos Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {videos.map((video) => (
                <div class={`video-card bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl ${video.featured ? 'md:col-span-2 lg:col-span-2' : ''}`}>
                    <!-- Thumbnail -->
                    <a href={video.url} target="_blank" rel="noopener noreferrer" class="block relative group">
                        <div class="video-thumbnail">
                            <img
                                src={video.thumbnail}
                                alt={video.title}
                                loading="lazy"
                                class="transition-transform duration-300 group-hover:scale-105"
                            />
                            <!-- Overlay -->
                            <div class="absolute inset-0 bg-black/30 group-hover:bg-black/20 transition-colors duration-300"></div>

                            <!-- Play Button -->
                            <div class="play-button absolute inset-0 flex items-center justify-center">
                                <div class="bg-white/90 hover:bg-white rounded-full p-4 md:p-6 shadow-2xl">
                                    <svg class="w-8 h-8 md:w-12 md:h-12 text-terracottaRed" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                            </div>
                        </div>
                    </a>

                    <!-- Video Info -->
                    <div class="p-5">
                        <h3 class="font-bold text-lg md:text-xl text-gray-900 mb-2">
                            {video.title}
                        </h3>
                        <p class="text-gray-600 text-sm mb-4">
                            {video.description}
                        </p>

                        <!-- Actions -->
                        <div class="flex items-center justify-between">
                            <a
                                href={video.url}
                                target="_blank"
                                rel="noopener noreferrer"
                                class="text-terracottaRed font-semibold text-sm hover:text-terracottaRed-darker transition-colors inline-flex items-center gap-2"
                            >
                                Watch Now
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                                </svg>
                            </a>

                            <!-- Share Buttons -->
                            <div class="share-button flex gap-2">
                                <button
                                    class="share-btn p-2 rounded-full bg-gray-100 hover:bg-sageGreen hover:text-white transition-colors"
                                    data-url={video.url}
                                    data-title={video.title}
                                    data-platform="facebook"
                                    title="Share on Facebook"
                                >
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                                    </svg>
                                </button>
                                <button
                                    class="share-btn p-2 rounded-full bg-gray-100 hover:bg-green-500 hover:text-white transition-colors"
                                    data-url={video.url}
                                    data-title={video.title}
                                    data-platform="whatsapp"
                                    title="Share on WhatsApp"
                                >
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            ))}
        </div>

        <!-- Bottom CTA -->
        <div class="text-center mt-12">
            <p class="text-gray-600 mb-4">Couldn't attend the event? Watch the full presentation and highlights</p>
            <a
                href="https://www.facebook.com/share/v/1NVdYz48Pp/"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 bg-gradient-to-r from-sageGreen to-emerald-600 text-white font-bold py-3 px-8 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:scale-105"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                Watch Full Event on Facebook
            </a>
        </div>
    </div>
</section>

<script>
    // Share functionality
    document.querySelectorAll('.share-btn').forEach(button => {
        button.addEventListener('click', function(this: HTMLElement) {
            const url = this.getAttribute('data-url');
            const title = this.getAttribute('data-title');
            const platform = this.getAttribute('data-platform');

            let shareUrl = '';
            if (platform === 'facebook') {
                shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url || '')}`;
            } else if (platform === 'whatsapp') {
                shareUrl = `https://wa.me/?text=${encodeURIComponent((title || '') + ' - ' + (url || ''))}`;
            }

            if (shareUrl) {
                window.open(shareUrl, '_blank', 'width=600,height=400');
            }
        });
    });
</script>
