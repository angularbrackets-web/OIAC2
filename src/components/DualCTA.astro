---
// Dual Call-to-Action Component
import { FUNDRAISER_CONFIG, shouldShowTotalGoal, shouldShowTotalRaised } from '../config/fundraiser';
---

<style>
@keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@keyframes bounce-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-4px); }
}

.gradient-animate {
    background-size: 200% 200%;
    animation: gradient-shift 3s ease infinite;
}

.bounce-icon {
    animation: bounce-subtle 2s ease-in-out infinite;
}

</style>

<section class="py-16 px-4 md:px-8 bg-white">
    <div class="container mx-auto max-w-6xl">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-black text-gray-900 mb-4">
                The Door of Participation is Still Open
            </h2>
            <p class="text-gray-600 text-base md:text-lg max-w-3xl mx-auto">
                Be part of this legacy â€” a legacy that will serve your children and generations to come with strong Islamic education and values
            </p>
        </div>

        <!-- CTA Cards Grid -->
        <div class="grid md:grid-cols-2 gap-6 md:gap-8">
            <!-- Card 1: Donate Now -->
            <div class="bg-gradient-to-br from-terracottaRed-50 to-orange-50 rounded-3xl p-8 md:p-10 shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-terracottaRed/20">
                <div class="text-center mb-8">
                    <div class="bounce-icon inline-block text-6xl mb-4">ðŸ¤²</div>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                        Donate to the Dream
                    </h3>
                    <p class="text-gray-700 text-sm md:text-base leading-relaxed mb-4">
                        Every donation, every share, every dua is a brick in this foundation
                    </p>
                    {shouldShowTotalGoal() ? (
                        <p class="text-terracottaRed font-semibold text-lg">
                            Help us reach our ${FUNDRAISER_CONFIG.totalGoal}M goal
                        </p>
                    ) : shouldShowTotalRaised() ? (
                        <div>
                            <p class="text-emerald-600 font-semibold text-base mb-1">
                                ${FUNDRAISER_CONFIG.totalRaised}M raised so far
                            </p>
                            <p class="text-gray-700 font-medium text-sm italic">
                                {FUNDRAISER_CONFIG.motivationalMessages.cta}
                            </p>
                        </div>
                    ) : (
                        <p class="text-sageGreen font-semibold text-base italic">
                            {FUNDRAISER_CONFIG.motivationalMessages.cta}
                        </p>
                    )}
                </div>

                <!-- Primary CTA Button -->
                <a
                    href="/donatetonewcentre"
                    id="donateButton"
                    class="gradient-animate block w-full bg-gradient-to-r from-terracottaRed via-terracottaRed-darker to-terracottaRed text-white font-bold py-4 px-8 rounded-xl text-center text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105"
                >
                    Donate Now ðŸ’š
                </a>

                <!-- Trust Badges -->
                <div class="mt-6 flex items-center justify-center gap-4 text-xs text-gray-600">
                    <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>Secure</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>Tax Receipt</span>
                    </div>
                    <div class="flex items-center gap-1">
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <span>Monthly Options</span>
                    </div>
                </div>
            </div>

            <!-- Card 2: Watch & Share -->
            <div class="bg-gradient-to-br from-sageGreen-50 to-emerald-50 rounded-3xl p-8 md:p-10 shadow-xl hover:shadow-2xl transition-all duration-300 border-2 border-sageGreen/20">
                <div class="text-center mb-6">
                    <div class="bounce-icon inline-block text-6xl mb-4">ðŸ“¹</div>
                    <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3">
                        Watch & Share
                    </h3>
                    <p class="text-gray-700 text-sm md:text-base leading-relaxed">
                        Couldn't attend? Watch the event highlights and help spread the word
                    </p>
                </div>

                <!-- Video Preview -->
                <div class="mb-6 rounded-2xl overflow-hidden shadow-md">
                    <a href="https://www.facebook.com/share/v/1NVdYz48Pp/" target="_blank" rel="noopener noreferrer" class="block relative group">
                        <div class="aspect-video bg-gradient-to-br from-gray-200 to-gray-300 flex items-center justify-center">
                            <div class="text-center">
                                <div class="bg-white/90 rounded-full p-4 mb-2 inline-block group-hover:scale-110 transition-transform">
                                    <svg class="w-12 h-12 text-sageGreen" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                </div>
                                <p class="text-gray-700 font-semibold text-sm">Watch Event Highlights</p>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Secondary CTA Button -->
                <a
                    href="https://www.facebook.com/share/v/1NVdYz48Pp/"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="gradient-animate block w-full bg-gradient-to-r from-sageGreen via-emerald-600 to-sageGreen text-white font-bold py-4 px-8 rounded-xl text-center text-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 mb-4"
                >
                    Watch on Facebook ðŸŽ¬
                </a>

                <!-- Social Share Buttons -->
                <div class="space-y-3">
                    <p class="text-sm font-semibold text-gray-700 text-center">Share with your network:</p>
                    <div class="grid grid-cols-3 gap-3">
                        <button
                            class="share-social-btn flex flex-col items-center gap-2 bg-white hover:bg-blue-600 hover:text-white border-2 border-gray-300 hover:border-blue-600 rounded-xl py-3 px-2 transition-all duration-300"
                            data-platform="facebook"
                        >
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            <span class="text-xs font-semibold">Facebook</span>
                        </button>
                        <button
                            class="share-social-btn flex flex-col items-center gap-2 bg-white hover:bg-green-500 hover:text-white border-2 border-gray-300 hover:border-green-500 rounded-xl py-3 px-2 transition-all duration-300"
                            data-platform="whatsapp"
                        >
                            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                            </svg>
                            <span class="text-xs font-semibold">WhatsApp</span>
                        </button>
                        <button
                            class="share-social-btn flex flex-col items-center gap-2 bg-white hover:bg-gray-700 hover:text-white border-2 border-gray-300 hover:border-gray-700 rounded-xl py-3 px-2 transition-all duration-300"
                            data-platform="email"
                        >
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            <span class="text-xs font-semibold">Email</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Social sharing functionality
    document.querySelectorAll('.share-social-btn').forEach(btn => {
        btn.addEventListener('click', function(this: HTMLElement) {
            const platform = this.getAttribute('data-platform');
            const url = 'https://www.oiacedmonton.ca/donatetonewcentre';
            const title = 'Join us in building South Edmonton\'s Islamic School - OIAC';
            const description = 'Support our vision to create a dedicated Islamic education centre. Together, we raised $2.8M - help us reach our $29M goal!';

            let shareUrl = '';
            if (platform === 'facebook') {
                shareUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(url)}`;
            } else if (platform === 'whatsapp') {
                shareUrl = `https://wa.me/?text=${encodeURIComponent(title + '\n\n' + description + '\n\n' + url)}`;
            } else if (platform === 'email') {
                shareUrl = `mailto:?subject=${encodeURIComponent(title)}&body=${encodeURIComponent(description + '\n\n' + url)}`;
            }

            if (shareUrl) {
                if (platform === 'email') {
                    window.location.href = shareUrl;
                } else {
                    window.open(shareUrl, '_blank', 'width=600,height=400');
                }
            }
        });
    });
</script>
