<script>
  document.addEventListener("DOMContentLoaded", function () {
    const hamburgerBtn = document.getElementById("hamburgerBtn") as HTMLButtonElement;
    const mobileMenu = document.getElementById("mobile-menu") as HTMLDivElement;
    const mobileBackdrop = document.getElementById("mobile-backdrop") as HTMLDivElement;
    const mobileIcon = document.querySelector(".mobile-icon") as SVGElement;
    const closeIcon = document.querySelector(".close-mobile-icon") as SVGElement;
    const closeButton = document.querySelector(".close-button") as HTMLButtonElement;
    const mobileMenuLinks = mobileMenu.querySelectorAll("a");

    // Toggle mobile menu
    function toggleMobileMenu() {
      const isOpen = !mobileMenu.classList.contains("translate-x-full");
      
      if (isOpen) {
        // Close menu
        mobileMenu.classList.add("translate-x-full");
        mobileBackdrop.classList.add("hidden");
        mobileIcon.classList.remove("hidden");
        closeIcon.classList.add("hidden");
        hamburgerBtn.setAttribute("aria-expanded", "false");
        document.body.style.overflow = "";
      } else {
        // Open menu
        mobileMenu.classList.remove("translate-x-full");
        mobileBackdrop.classList.remove("hidden");
        mobileIcon.classList.add("hidden");
        closeIcon.classList.remove("hidden");
        hamburgerBtn.setAttribute("aria-expanded", "true");
        document.body.style.overflow = "hidden";
      }
    }

    hamburgerBtn.addEventListener("click", toggleMobileMenu);
    closeButton.addEventListener("click", toggleMobileMenu);
    mobileBackdrop.addEventListener("click", toggleMobileMenu);

    // Close menu when clicking a link
    mobileMenuLinks.forEach((link) => {
      link.addEventListener("click", () => {
        toggleMobileMenu();
      });
    });

    // Keyboard navigation
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !mobileMenu.classList.contains("translate-x-full")) {
        toggleMobileMenu();
      }
    });

    // Add shadow on scroll
    const nav = document.getElementById("main-nav");
    let lastScroll = 0;

    window.addEventListener("scroll", () => {
      const currentScroll = window.pageYOffset;

      if (currentScroll > 10) {
        nav?.classList.add("shadow-md");
      } else {
        nav?.classList.remove("shadow-md");
      }

      lastScroll = currentScroll;
    });

    // Set nav height CSS variable for sticky positioning
    function setNavHeight() {
      if (nav) {
        const navHeight = nav.offsetHeight;
        document.documentElement.style.setProperty('--nav-height', `${navHeight}px`);
      }
    }

    // Set on load and resize
    setNavHeight();
    window.addEventListener('resize', setNavHeight);

    // Desktop dropdown keyboard navigation
    const aboutUsBtn = document.getElementById("about-us-btn") as HTMLButtonElement;
    const aboutUsMenu = document.getElementById("about-us-menu") as HTMLDivElement;

    if (aboutUsBtn && aboutUsMenu) {
      let dropdownTimeout: ReturnType<typeof setTimeout>;

      // Toggle dropdown on click
      aboutUsBtn.addEventListener("click", (e) => {
        e.preventDefault();
        const isExpanded = aboutUsBtn.getAttribute("aria-expanded") === "true";
        aboutUsBtn.setAttribute("aria-expanded", (!isExpanded).toString());
        aboutUsMenu.classList.toggle("hidden");

        if (!isExpanded) {
          // Focus first menu item when opening
          const firstItem = aboutUsMenu.querySelector("a") as HTMLAnchorElement;
          firstItem?.focus();
        }
      });

      // Keyboard navigation
      aboutUsBtn.addEventListener("keydown", (e) => {
        if (e.key === "Enter" || e.key === " " || e.key === "ArrowDown") {
          e.preventDefault();
          aboutUsBtn.setAttribute("aria-expanded", "true");
          aboutUsMenu.classList.remove("hidden");
          const firstItem = aboutUsMenu.querySelector("a") as HTMLAnchorElement;
          firstItem?.focus();
        }
      });

      // Handle arrow keys within menu
      aboutUsMenu.addEventListener("keydown", (e) => {
        const menuItems = Array.from(aboutUsMenu.querySelectorAll("a"));
        const currentIndex = menuItems.indexOf(document.activeElement as HTMLAnchorElement);

        if (e.key === "ArrowDown") {
          e.preventDefault();
          const nextIndex = (currentIndex + 1) % menuItems.length;
          menuItems[nextIndex]?.focus();
        } else if (e.key === "ArrowUp") {
          e.preventDefault();
          const prevIndex = currentIndex > 0 ? currentIndex - 1 : menuItems.length - 1;
          menuItems[prevIndex]?.focus();
        } else if (e.key === "Escape") {
          e.preventDefault();
          aboutUsBtn.setAttribute("aria-expanded", "false");
          aboutUsMenu.classList.add("hidden");
          aboutUsBtn.focus();
        }
      });

      // Close on outside click
      document.addEventListener("click", (e) => {
        if (!aboutUsBtn.contains(e.target as Node) && !aboutUsMenu.contains(e.target as Node)) {
          aboutUsBtn.setAttribute("aria-expanded", "false");
          aboutUsMenu.classList.add("hidden");
        }
      });

      // Improved hover behavior with delay
      aboutUsBtn.parentElement?.addEventListener("mouseenter", () => {
        clearTimeout(dropdownTimeout);
        aboutUsBtn.setAttribute("aria-expanded", "true");
        aboutUsMenu.classList.remove("hidden");
      });

      aboutUsBtn.parentElement?.addEventListener("mouseleave", () => {
        dropdownTimeout = setTimeout(() => {
          aboutUsBtn.setAttribute("aria-expanded", "false");
          aboutUsMenu.classList.add("hidden");
        }, 300);
      });

      // Keep dropdown open when hovering over it
      aboutUsMenu.addEventListener("mouseenter", () => {
        clearTimeout(dropdownTimeout);
      });

      aboutUsMenu.addEventListener("mouseleave", () => {
        dropdownTimeout = setTimeout(() => {
          aboutUsBtn.setAttribute("aria-expanded", "false");
          aboutUsMenu.classList.add("hidden");
        }, 300);
      });
    }
  });
</script>

