---
import OIACLayout from "../layouts/oiac-layout.astro"
import VolunteerComponent from "../components/Volunteer.astro"
import NewsletterComponent from "../components/Newsletter.astro"
import OIACFrontImage from "../assets/OIAC.Front.png"
import facebookIcon from '../assets/facebook-icon-outline.svg'
import instagramIcon from '../assets/instagram-icon-outline.svg'
import youtubeIcon from '../assets/youtube-icon-outline.svg'
import locationIcon from '../assets/location-icon-outline.svg'
import callIcon from '../assets/call-icon-outline.svg'
import emailIcon from '../assets/email-icon-outline.svg'
---
<OIACLayout title="OIAC - Contact Us">
    <div class="px-4 p-2 md:px-8 md:py-2 mx-auto bg-indigo-950 text-indigo-50">
        <div class="container mt-5 mb-10">
            <div class="my-20 flex flex-wrap gap-24">
                <div>
                    <h4 class="text-4xl pb-10 text-indigo-300 border-b border-indigo-500 mb-10">Contact Us</h4>
                    <div class="flex flex-wrap">
                        <a href="https://maps.app.goo.gl/TFwUkqzpHmMv7tcE7" target="_blank" class="flex mb-3"><div class="bg-indigo-500 w-8 h-8 rounded-full mr-3"><img src={locationIcon.src} alt="location" class="w-6 h-6 m-1" /></div><span class="text-xl mr-3">6005 103A St NW, Edmonton</span><span class="hidden md:block text-sm mt-1 italic underline">ðŸ‘‰ Open in Google Maps</span></a>
                        <a href="https://maps.app.goo.gl/TFwUkqzpHmMv7tcE7" target="_blank" class="pl-10 mb-3 md:hidden md:mb-0 md:pl-0">ðŸ‘‰ Open in Google Maps</a>
                    </div>
                    <div class="flex text-xl">
                        <div class="bg-indigo-500 w-8 h-8 rounded-full mr-3 flex mb-3"><img src={callIcon.src} alt="call" class="w-6 h-6 m-1" /></div><span>Call us : </span><span class="ml-2">(587) 882-3202</span>
                    </div>
                    <div class="flex text-xl">
                        <div class="bg-indigo-500 w-8 h-8 rounded-full mr-3 flex mb-3"><img src={emailIcon.src} alt="email" class="w-6 h-6 m-1" /></div><span>Email us : </span><span class="ml-2">info@oiacedmonton.ca</span>
                    </div>
                </div>
                <div class="md:pl-12 md:border-l md:border-indigo-600">
                    <h4 class="text-4xl pb-10 text-indigo-300 border-b border-indigo-500 mb-10">Our Social links</h4>
                    <a href="http://www.facebook.com/oiacentre" target="_blank" class="flex text-xl mb-3"><div class="bg-indigo-500 w-8 h-8 rounded-full mr-3"><img src={facebookIcon.src} alt="facebook" class="w-8 h-8" /></div><span>Facebook</span></a>
                    <a href="https://www.instagram.com/oiacentre/" target="_blank" class="flex text-xl mb-3"><div class="bg-indigo-500 w-8 h-8 rounded-full mr-3"><img src={instagramIcon.src} alt="facebook" class="w-8 h-8" /></div><span>Instagram</span></a>
                    <a href="https://www.youtube.com/channel/UChrQOLcHGkhjBmBM2k9uXQA" target="_blank" class="flex text-xl mb-3"><div class="bg-indigo-500 w-8 h-8 rounded-full mr-3"><img src={youtubeIcon.src} alt="facebook" class="w-8 h-8" /></div><span>Youtube</span></a>
                </div>
            </div>
            <div class="mb-5">
                <img src={OIACFrontImage.src} alt="OIAC" class="rounded-xl" />
            </div>
            <div class="mb-5">
                <VolunteerComponent></VolunteerComponent>
            </div>
            <div class="mb-5">
                <NewsletterComponent></NewsletterComponent>
            </div>
            
        </div>
    </div>
</OIACLayout>
