---
import OIACLayout from "../layouts/oiac-layout.astro";
import VolunteerComponent from "../components/Volunteer2.astro";
import NewsletterComponent from "../components/Newsletter2.astro";
import OIACFrontImage from "../assets/OIAC.Front.png";
import facebookIcon from "../assets/facebook-icon-outline.svg";
import instagramIcon from "../assets/instagram-icon-outline.svg";
import youtubeIcon from "../assets/youtube-icon-outline.svg";
import locationIcon from "../assets/location-icon-outline.svg";
import callIcon from "../assets/call-icon-outline.svg";
import emailIcon from "../assets/email-icon-outline.svg";
---

<OIACLayout title="OIAC - Contact Us">
  <div class="px-4 p-2 md:px-8 md:py-2 mx-auto text-terracottaRed">
    <div class="container mt-5 mb-10">
      <div class="my-20 flex flex-wrap gap-24">
        <div>
          <h4
            class="text-4xl font-black pb-10 text-terracottaRed-darker border-b border-softBeige mb-10"
          >
            Contact Us
          </h4>
          <div class="flex flex-wrap">
            <a
              href="https://maps.app.goo.gl/qmxXwbDDywmXibxW8"
              target="_blank"
              class="flex mb-3"
              ><i class="lni lni-location-arrow-right mt-2 mr-3"></i><span class="text-xl mr-3">110 - 1011 Parsons Rd SW, Edmonton , AB T6X 0X2</span
              ><span class="hidden md:block text-sm mt-1 italic underline"
                >ðŸ‘‰ Open in Google Maps</span
              ></a
            >
            <a
              href="https://maps.app.goo.gl/qmxXwbDDywmXibxW8"
              target="_blank"
              class="pl-10 mb-3 md:hidden md:mb-0 md:pl-0"
              >ðŸ‘‰ Open in Google Maps</a
            >
          </div>
          <div class="flex text-xl mb-2">
            <i class="lni lni-phone mt-2 mr-3"></i><span>Call us : </span><span class="ml-2">(587) 882-3202</span
            >
          </div>
          <div class="flex text-xl">
            <i class="lni lni-envelope-1 mt-2 mr-3"></i><span>Email us : </span><span class="ml-2"
              >info@oiacedmonton.ca</span
            >
          </div>
        </div>
        <div class="md:pl-12 md:border-l md:border-softBeige">
          <h4
            class="text-4xl font-black pb-10 text-terracottaRed border-b border-softBeige mb-10"
          >
            Our Social links
          </h4>
          
          <a
            href="http://www.facebook.com/oiacentre"
            target="_blank"
            class="flex mb-3"
            ><i class="lni lni-facebook mt-2 mr-3 text-2rem"></i><span class="text-xl">Facebook</span></a
          >
          <a
            href="https://www.instagram.com/oiacentre/"
            target="_blank"
            class="flex text-xl mb-3"
            ><i class="lni lni-instagram mt-2 mr-3 text-2rem"></i><span>Instagram</span></a
          >
          <a
            href="https://www.youtube.com/channel/UChrQOLcHGkhjBmBM2k9uXQA"
            target="_blank"
            class="flex text-xl mb-3"
            ><i class="lni lni-youtube mt-2 mr-3 text-2rem"></i><span>Youtube</span></a
          >
        </div>
      </div>
      <div class="mb-5">
        <img src={OIACFrontImage.src} alt="OIAC" class="rounded-xl" />
      </div>
      <VolunteerComponent />
      <NewsletterComponent />
    </div>
  </div>
</OIACLayout>
