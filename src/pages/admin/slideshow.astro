---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Slideshow" currentPage="slideshow">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Home Page Slideshow</h1>
      <p class="text-gray-600 mt-1">Manage video cards displayed on the home page</p>
    </div>
    <button id="addNewBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-medium">
      + Add Video
    </button>
  </div>

  <!-- Items List -->
  <div id="slideshowList" class="space-y-4">
    <p class="text-gray-500">Loading...</p>
  </div>

  <!-- Add/Edit Modal -->
  <div id="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[90vh] overflow-y-auto mx-4">
      <h2 id="modalTitle" class="text-2xl font-bold mb-4">Add New Video</h2>
      <form id="slideshowForm" class="space-y-4">
        <input type="hidden" id="itemId" />

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
          <input type="text" id="title" required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description (optional)</label>
          <textarea id="description" rows="2"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            placeholder="Short description shown below the video title"></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Video URL *</label>
          <input type="url" id="url" required
            placeholder="https://youtu.be/... or https://facebook.com/..."
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Video Type *</label>
            <select id="videoType" required
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
              <option value="youtube">YouTube</option>
              <option value="facebook">Facebook</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
            <input type="number" id="displayOrder" min="1"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="1, 2, 3..." />
          </div>
        </div>

        <!-- Thumbnail -->
        <div class="border rounded-lg p-4 bg-blue-50">
          <h3 class="font-semibold text-blue-800 mb-2 flex items-center gap-2">
            <span>üñºÔ∏è</span> Thumbnail
          </h3>
          <div class="flex gap-2">
            <input type="url" id="thumbnail" placeholder="Paste image URL"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <button type="button" id="autoThumbBtn"
              class="px-3 py-2 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 whitespace-nowrap">
              Auto-detect
            </button>
            <button type="button" onclick="openMediaPicker()"
              class="px-3 py-2 bg-gray-600 text-white text-sm rounded hover:bg-gray-700 whitespace-nowrap">
              Browse
            </button>
          </div>
          <p class="text-xs text-gray-500 mt-1">YouTube thumbnails can be auto-detected. Facebook videos require a manual thumbnail.</p>
          <div id="thumbPreview" class="mt-3 hidden">
            <img id="thumbPreviewImg" src="" alt="Thumbnail preview" class="max-h-32 rounded border" />
          </div>
        </div>

        <!-- Featured -->
        <label class="flex items-center gap-3 cursor-pointer">
          <input type="checkbox" id="featured" class="w-5 h-5 rounded text-blue-600" />
          <span class="text-sm font-medium text-gray-700">
            Featured ‚Äî takes up a larger 2√ó2 grid space on the home page
          </span>
        </label>

        <div class="flex justify-end gap-3 pt-4 border-t">
          <button type="button" id="cancelBtn" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Media Picker Modal -->
  <div id="mediaPickerModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-[60]">
    <div class="bg-white rounded-lg p-6 w-full max-w-3xl max-h-[90vh] overflow-y-auto mx-4">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Select Thumbnail</h2>
        <button onclick="closeMediaPicker()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>

      <!-- Upload in picker -->
      <div class="mb-4 p-4 bg-gray-50 rounded-lg">
        <label class="flex items-center justify-center gap-2 cursor-pointer text-blue-600 hover:text-blue-800">
          <span class="text-xl">üì§</span>
          <span>Upload new image</span>
          <input type="file" id="pickerUploadInput" class="hidden"
            accept="image/jpeg,image/png,image/gif,image/webp,image/svg+xml,image/avif,.jpg,.jpeg,.png,.gif,.webp,.svg,.avif" />
        </label>
      </div>

      <div id="mediaPickerGrid" class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        <p class="col-span-full text-gray-500 text-center py-8">Loading media...</p>
      </div>
    </div>
  </div>

  <script is:inline>
    const API_URL = '/api/cms/slideshow';
    const MEDIA_API = '/api/cms/media';
    const MAX_FILE_SIZE = 4 * 1024 * 1024;
    let items = [];
    let mediaFiles = [];

    // The 4 videos currently hardcoded in VideoShowcase ‚Äî used for one-time migration
    const SEED_DATA = [
      {
        title: 'Fundraiser Event Highlights',
        description: 'Watch the beautiful moments from our September 28th fundraising dinner',
        url: 'https://www.facebook.com/share/v/1NVdYz48Pp/',
        videoType: 'facebook',
        featured: true,
        displayOrder: 1
      },
      {
        title: 'Summer Camp 2024',
        description: 'See our students learning and growing in faith',
        url: 'https://youtu.be/ZySR5DexpzE',
        thumbnail: 'https://img.youtube.com/vi/ZySR5DexpzE/maxresdefault.jpg',
        videoType: 'youtube',
        featured: false,
        displayOrder: 2
      },
      {
        title: 'OIAC Academy',
        description: 'Discover our educational programs and curriculum',
        url: 'https://youtu.be/-WjaHBGu26c',
        thumbnail: 'https://img.youtube.com/vi/-WjaHBGu26c/maxresdefault.jpg',
        videoType: 'youtube',
        featured: false,
        displayOrder: 3
      },
      {
        title: 'Construction Progress',
        description: 'Latest updates on our new Islamic Centre',
        url: 'https://youtu.be/Pu5zk4F6vMs',
        thumbnail: 'https://img.youtube.com/vi/Pu5zk4F6vMs/maxresdefault.jpg',
        videoType: 'youtube',
        featured: false,
        displayOrder: 4
      }
    ];

    document.addEventListener('DOMContentLoaded', loadItems);

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading slideshow:', error);
        document.getElementById('slideshowList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load slideshow</h3>
            <p class="text-red-600 text-sm mb-3">
              The <code class="bg-red-100 px-1 rounded">oiac_slideshow</code> table may not exist yet.
              Create it in the Supabase SQL Editor with this query:
            </p>
            <pre class="bg-red-100 text-red-800 p-3 rounded text-xs overflow-x-auto whitespace-pre-wrap">CREATE TABLE IF NOT EXISTS oiac_slideshow (
  id UUID DEFAULT gen_random_uuid() PRIMARY KEY,
  title VARCHAR(255) NOT NULL,
  description TEXT,
  url TEXT NOT NULL,
  thumbnail TEXT,
  video_type VARCHAR(20) NOT NULL DEFAULT 'other',
  featured BOOLEAN DEFAULT FALSE,
  display_order INTEGER,
  created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
  updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);</pre>
            <button onclick="loadItems()" class="mt-3 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm">Retry</button>
          </div>
        `;
      }
    }

    function renderItems() {
      const container = document.getElementById('slideshowList');

      if (items.length === 0) {
        container.innerHTML = `
          <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-8 text-center">
            <p class="text-gray-500 mb-2 text-lg font-medium">No slideshow videos yet</p>
            <p class="text-gray-400 text-sm mb-5">
              Click the button below to import the 4 videos currently hardcoded on the home page.
              YouTube thumbnails are set automatically. The Facebook video thumbnail will need to be
              uploaded via the Media Library afterwards.
            </p>
            <button onclick="seedData()" id="seedBtn"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium">
              Migrate Existing Slideshow Data
            </button>
          </div>
        `;
        return;
      }

      container.innerHTML = items.map(item => `
        <div class="bg-white rounded-lg shadow p-4 flex justify-between items-start">
          <div class="flex gap-4 flex-1 min-w-0">
            <!-- Thumbnail preview -->
            <div class="flex-shrink-0 w-24">
              ${item.thumbnail
                ? `<img src="${item.thumbnail}" alt="${escapeHtml(item.title)}" class="w-24 h-16 object-cover rounded border" />`
                : `<div class="w-24 h-16 bg-gray-200 rounded border flex items-center justify-center">
                     <span class="text-gray-400 text-xs text-center leading-tight px-1">No thumbnail</span>
                   </div>`
              }
            </div>
            <!-- Info -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center flex-wrap gap-2">
                <h3 class="font-semibold text-lg">${escapeHtml(item.title)}</h3>
                ${item.featured ? '<span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-0.5 rounded font-medium">Featured</span>' : ''}
                <span class="text-xs bg-gray-100 text-gray-600 px-2 py-0.5 rounded">${item.videoType}</span>
                ${item.displayOrder ? `<span class="text-xs text-gray-400">#${item.displayOrder}</span>` : ''}
              </div>
              ${item.description ? `<p class="text-gray-500 text-sm mt-0.5">${escapeHtml(item.description)}</p>` : ''}
              <p class="text-blue-500 text-xs mt-0.5 truncate">${escapeHtml(item.url)}</p>
            </div>
          </div>
          <div class="flex gap-2 ml-4 flex-shrink-0">
            <button onclick="editItem('${item.id}')" class="text-blue-600 hover:text-blue-800 px-3 py-1 border border-blue-600 rounded text-sm">
              Edit
            </button>
            <button onclick="deleteItem('${item.id}')" class="text-red-600 hover:text-red-800 px-3 py-1 border border-red-600 rounded text-sm">
              Delete
            </button>
          </div>
        </div>
      `).join('');
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // ‚îÄ‚îÄ Seed / Migration ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.seedData = async function() {
      const btn = document.getElementById('seedBtn');
      btn.textContent = 'Migrating‚Ä¶';
      btn.disabled = true;

      let success = 0;
      for (const item of SEED_DATA) {
        try {
          const res = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(item)
          });
          if (res.ok) success++;
          else console.error('Seed failed for', item.title, await res.json());
        } catch (e) {
          console.error('Seed error for', item.title, e);
        }
      }

      if (success > 0) {
        await loadItems();
      } else {
        btn.textContent = 'Migration failed ‚Äî check console';
        btn.disabled = false;
      }
    };

    // ‚îÄ‚îÄ Modal ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    const modal = document.getElementById('modal');
    const form  = document.getElementById('slideshowForm');

    document.getElementById('addNewBtn').addEventListener('click', () => {
      document.getElementById('modalTitle').textContent = 'Add New Video';
      form.reset();
      document.getElementById('itemId').value = '';
      document.getElementById('featured').checked = false;
      hideThumbPreview();
      showModal();
    });

    document.getElementById('cancelBtn').addEventListener('click', hideModal);
    modal.addEventListener('click', (e) => { if (e.target === modal) hideModal(); });

    function showModal() { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    function hideModal() { modal.classList.add('hidden');   modal.classList.remove('flex'); }

    // ‚îÄ‚îÄ Edit ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.editItem = function(id) {
      const item = items.find(i => i.id === id);
      if (!item) return;

      document.getElementById('modalTitle').textContent = 'Edit Video';
      document.getElementById('itemId').value        = item.id;
      document.getElementById('title').value         = item.title;
      document.getElementById('description').value   = item.description || '';
      document.getElementById('url').value           = item.url;
      document.getElementById('videoType').value     = item.videoType;
      document.getElementById('thumbnail').value     = item.thumbnail || '';
      document.getElementById('displayOrder').value  = item.displayOrder || '';
      document.getElementById('featured').checked    = item.featured;

      if (item.thumbnail) showThumbPreview(item.thumbnail);
      else hideThumbPreview();

      showModal();
    };

    // ‚îÄ‚îÄ Delete ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.deleteItem = async function(id) {
      if (!confirm('Delete this video from the slideshow?')) return;
      try {
        const res = await fetch(API_URL, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id })
        });
        if (!res.ok) throw new Error('Failed to delete');
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    };

    // ‚îÄ‚îÄ Submit ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;

      const data = {
        title:        document.getElementById('title').value,
        description:  document.getElementById('description').value || undefined,
        url:          document.getElementById('url').value,
        videoType:    document.getElementById('videoType').value,
        thumbnail:    document.getElementById('thumbnail').value || undefined,
        featured:     document.getElementById('featured').checked,
        displayOrder: document.getElementById('displayOrder').value
                        ? parseInt(document.getElementById('displayOrder').value)
                        : undefined
      };

      try {
        const res = await fetch(API_URL, {
          method:  id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body:    JSON.stringify(id ? { id, ...data } : data)
        });
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to save');
        }
        hideModal();
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    });

    // ‚îÄ‚îÄ Auto-detect video type + YouTube thumbnail ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    document.getElementById('autoThumbBtn').addEventListener('click', function() {
      const url = document.getElementById('url').value.trim();
      if (!url) { alert('Enter a video URL first.'); return; }

      const ytMatch = url.match(/(?:youtu\.be\/|youtube\.com\/(?:watch\?v=|embed\/|v\/))([-\w]+)/);
      if (ytMatch) {
        document.getElementById('videoType').value = 'youtube';
        const thumb = 'https://img.youtube.com/vi/' + ytMatch[1] + '/maxresdefault.jpg';
        document.getElementById('thumbnail').value = thumb;
        showThumbPreview(thumb);
        return;
      }

      if (url.includes('facebook.com') || url.includes('fb.com')) {
        document.getElementById('videoType').value = 'facebook';
        if (!document.getElementById('thumbnail').value) {
          alert('Facebook videos need a manual thumbnail.\nUpload one via the Browse button or Media Library.');
        }
        return;
      }

      document.getElementById('videoType').value = 'other';
    });

    // ‚îÄ‚îÄ Thumbnail preview ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function showThumbPreview(url) {
      document.getElementById('thumbPreview').classList.remove('hidden');
      document.getElementById('thumbPreviewImg').src = url;
    }
    function hideThumbPreview() {
      document.getElementById('thumbPreview').classList.add('hidden');
    }
    document.getElementById('thumbnail').addEventListener('input', function() {
      if (this.value.trim()) showThumbPreview(this.value.trim());
      else hideThumbPreview();
    });

    // ‚îÄ‚îÄ Media Picker ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.openMediaPicker = async function() {
      try {
        const res = await fetch(MEDIA_API);
        mediaFiles = await res.json();
      } catch (e) { mediaFiles = []; }
      renderMediaPicker();
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.remove('hidden');
      picker.classList.add('flex');
    };

    window.closeMediaPicker = function() {
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.add('hidden');
      picker.classList.remove('flex');
    };

    function renderMediaPicker() {
      const grid   = document.getElementById('mediaPickerGrid');
      const images = mediaFiles.filter(f => f.type === 'image');

      if (images.length === 0) {
        grid.innerHTML = '<p class="col-span-full text-gray-500 text-center py-8">No images in library. Upload one above.</p>';
        return;
      }

      grid.innerHTML = images.map(file => `
        <div class="cursor-pointer rounded-lg overflow-hidden border-2 border-transparent hover:border-blue-500 transition"
             onclick="selectThumbnail('${file.url}')">
          <img src="${file.url}" class="aspect-square object-cover" />
          <p class="text-xs p-1 truncate bg-gray-100">${file.name}</p>
        </div>
      `).join('');
    }

    window.selectThumbnail = function(url) {
      document.getElementById('thumbnail').value = url;
      showThumbPreview(url);
      closeMediaPicker();
    };

    // Upload from inside picker
    document.getElementById('pickerUploadInput').addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      if (file.size > MAX_FILE_SIZE) {
        alert('File is too large (' + (file.size / 1024 / 1024).toFixed(1) + ' MB). Max is 4 MB.');
        e.target.value = '';
        return;
      }

      const formData = new FormData();
      formData.append('file', file);

      try {
        const res = await fetch(MEDIA_API, { method: 'POST', body: formData });
        if (!res.ok) throw new Error('Upload failed');
        const result = await res.json();
        selectThumbnail(result.url);
      } catch (err) { alert('Upload error: ' + err.message); }

      e.target.value = '';
    });

    // Close picker on backdrop click
    document.getElementById('mediaPickerModal').addEventListener('click', (e) => {
      if (e.target.id === 'mediaPickerModal') closeMediaPicker();
    });
  </script>
</AdminLayout>
