---
import AdminLayout2 from '../../layouts/AdminLayout2.astro';
import AdminPageHeader from '../../components/admin/AdminPageHeader.astro';
import AdminModal from '../../components/admin/AdminModal.astro';
import AdminMediaPicker from '../../components/admin/AdminMediaPicker.astro';
---

<AdminLayout2 title="Slideshow" currentPage="slideshow">
  <AdminPageHeader title="Home Page Slideshow" description="Manage video cards displayed on the home page">
    <button id="addNewBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
      Add Video
    </button>
  </AdminPageHeader>

  <div id="slideshowList" class="space-y-3">
    <p class="text-gray-500 text-sm">Loading...</p>
  </div>

  <AdminModal id="slideshow-modal" title="Add Video">
    <form id="slideshowForm" class="space-y-4">
      <input type="hidden" id="itemId" />

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
        <input type="text" id="title" required
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Description (optional)</label>
        <textarea id="description" rows="2"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
          placeholder="Short description shown below the video title"></textarea>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Video URL *</label>
        <input type="url" id="url" required
          placeholder="https://youtu.be/... or https://facebook.com/..."
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Video Type *</label>
          <select id="videoType" required
            class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <option value="youtube">YouTube</option>
            <option value="facebook">Facebook</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
          <input type="number" id="displayOrder" min="1"
            class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            placeholder="1, 2, 3..." />
        </div>
      </div>

      <!-- Thumbnail -->
      <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
        <h3 class="font-medium text-gray-700 text-sm mb-2 flex items-center gap-2">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-gray-500"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"></rect><circle cx="9" cy="9" r="2"></circle><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"></path></svg>
          Thumbnail
        </h3>
        <div class="flex gap-2">
          <input type="url" id="thumbnail" placeholder="Paste image URL"
            class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          <button type="button" id="autoThumbBtn"
            class="px-3 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors whitespace-nowrap">
            Auto-detect
          </button>
          <button type="button" id="browseMediaBtn"
            class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors whitespace-nowrap">
            Browse
          </button>
        </div>
        <p class="text-xs text-gray-500 mt-1">YouTube thumbnails can be auto-detected. Facebook videos require a manual thumbnail.</p>
        <div id="thumbPreview" class="mt-3 hidden">
          <img id="thumbPreviewImg" src="" alt="Thumbnail preview" class="max-h-32 rounded-lg border border-gray-200" />
        </div>
      </div>

      <!-- Featured -->
      <label class="flex items-center gap-3 cursor-pointer">
        <input type="checkbox" id="featured" class="w-5 h-5 rounded text-blue-600" />
        <span class="text-sm font-medium text-gray-700">
          Featured â€” takes up a larger 2x2 grid space on the home page
        </span>
      </label>

      <Fragment slot="footer">
        <div class="flex justify-end gap-3">
          <button type="button" id="cancelBtn" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">Cancel</button>
          <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors">Save</button>
        </div>
      </Fragment>
    </form>
  </AdminModal>

  <AdminMediaPicker />

  <script is:inline>
    const API_URL = '/api/cms/slideshow';
    let items = [];

    document.addEventListener('DOMContentLoaded', loadItems);

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading slideshow:', error);
        document.getElementById('slideshowList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load slideshow</h3>
            <p class="text-red-600 text-sm">Please check your database connection and try again.</p>
            <button onclick="loadItems()" class="mt-3 text-sm font-medium text-red-700 hover:text-red-800">Retry</button>
          </div>
        `;
      }
    }

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function renderItems() {
      const container = document.getElementById('slideshowList');

      if (items.length === 0) {
        container.innerHTML = `
          <div class="flex flex-col items-center justify-center py-16 text-center">
            <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center mb-4">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-gray-400"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
            </div>
            <p class="text-sm text-gray-500 mb-1">No slideshow videos yet</p>
            <p class="text-xs text-gray-400">Click "Add Video" to create one.</p>
          </div>
        `;
        return;
      }

      container.innerHTML = items.map(item => `
        <div class="bg-white rounded-lg border border-gray-200 px-4 py-3 flex items-center gap-4">
          <div class="flex-shrink-0 w-24">
            ${item.thumbnail
              ? `<img src="${escapeHtml(item.thumbnail)}" alt="${escapeHtml(item.title)}" class="w-24 h-16 object-cover rounded-lg border border-gray-100" />`
              : `<div class="w-24 h-16 bg-gray-100 rounded-lg border border-gray-100 flex items-center justify-center">
                   <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-gray-300"><polygon points="5 3 19 12 5 21 5 3"></polygon></svg>
                 </div>`
            }
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center flex-wrap gap-2">
              <p class="font-medium text-gray-900 text-sm">${escapeHtml(item.title)}</p>
              ${item.featured ? '<span class="text-xs bg-yellow-100 text-yellow-800 px-2 py-0.5 rounded-full font-medium">Featured</span>' : ''}
              <span class="text-xs bg-gray-100 text-gray-600 px-2 py-0.5 rounded-full">${escapeHtml(item.videoType)}</span>
              ${item.displayOrder ? `<span class="text-xs text-gray-400">#${item.displayOrder}</span>` : ''}
            </div>
            ${item.description ? `<p class="text-gray-500 text-xs mt-0.5">${escapeHtml(item.description)}</p>` : ''}
            <p class="text-blue-500 text-xs mt-0.5 truncate">${escapeHtml(item.url)}</p>
          </div>
          <div class="flex items-center gap-1 flex-shrink-0">
            <button onclick="editItem('${item.id}')" class="p-1.5 rounded-lg text-gray-400 hover:text-blue-600 hover:bg-blue-50 transition-colors" title="Edit">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.85 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path></svg>
            </button>
            <button onclick="deleteItem('${item.id}')" class="p-1.5 rounded-lg text-gray-400 hover:text-red-600 hover:bg-red-50 transition-colors" title="Delete">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path></svg>
            </button>
          </div>
        </div>
      `).join('');
    }

    // Modal
    const dialog = document.getElementById('slideshow-modal');
    const form = document.getElementById('slideshowForm');

    document.getElementById('addNewBtn').addEventListener('click', () => {
      dialog.querySelector('h2').textContent = 'Add Video';
      form.reset();
      document.getElementById('itemId').value = '';
      document.getElementById('featured').checked = false;
      hideThumbPreview();
      dialog.showModal();
    });

    document.getElementById('cancelBtn').addEventListener('click', () => dialog.close());

    // Browse media
    document.getElementById('browseMediaBtn').addEventListener('click', () => {
      openMediaPicker('image', (url) => {
        document.getElementById('thumbnail').value = url;
        showThumbPreview(url);
      });
    });

    // Edit
    window.editItem = function(id) {
      const item = items.find(i => i.id === id);
      if (!item) return;

      dialog.querySelector('h2').textContent = 'Edit Video';
      document.getElementById('itemId').value        = item.id;
      document.getElementById('title').value         = item.title;
      document.getElementById('description').value   = item.description || '';
      document.getElementById('url').value           = item.url;
      document.getElementById('videoType').value     = item.videoType;
      document.getElementById('thumbnail').value     = item.thumbnail || '';
      document.getElementById('displayOrder').value  = item.displayOrder || '';
      document.getElementById('featured').checked    = item.featured;

      if (item.thumbnail) showThumbPreview(item.thumbnail);
      else hideThumbPreview();

      dialog.showModal();
    };

    // Delete
    window.deleteItem = function(id) {
      showConfirm('confirm-dialog', async () => {
        try {
          const res = await fetch(API_URL, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id })
          });
          if (!res.ok) throw new Error('Failed to delete');
          showToast('Video deleted', 'success');
          await loadItems();
        } catch (e) { showToast('Error: ' + e.message, 'error'); }
      }, { title: 'Delete Video', message: 'This video will be permanently removed from the slideshow.' });
    };

    // Submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;

      const data = {
        title:        document.getElementById('title').value,
        description:  document.getElementById('description').value || undefined,
        url:          document.getElementById('url').value,
        videoType:    document.getElementById('videoType').value,
        thumbnail:    document.getElementById('thumbnail').value || undefined,
        featured:     document.getElementById('featured').checked,
        displayOrder: document.getElementById('displayOrder').value
                        ? parseInt(document.getElementById('displayOrder').value)
                        : undefined
      };

      try {
        const res = await fetch(API_URL, {
          method:  id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body:    JSON.stringify(id ? { id, ...data } : data)
        });
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to save');
        }
        dialog.close();
        showToast(id ? 'Video updated' : 'Video added', 'success');
        await loadItems();
      } catch (e) { showToast('Error: ' + e.message, 'error'); }
    });

    // Auto-detect video type + YouTube thumbnail
    document.getElementById('autoThumbBtn').addEventListener('click', function() {
      const url = document.getElementById('url').value.trim();
      if (!url) {
        showToast('Enter a video URL first.', 'warning');
        return;
      }

      const ytMatch = url.match(/(?:youtu\.be\/|youtube\.com\/(?:watch\?v=|embed\/|v\/))([-\w]+)/);
      if (ytMatch) {
        document.getElementById('videoType').value = 'youtube';
        const thumb = 'https://img.youtube.com/vi/' + ytMatch[1] + '/maxresdefault.jpg';
        document.getElementById('thumbnail').value = thumb;
        showThumbPreview(thumb);
        showToast('YouTube thumbnail detected', 'success');
        return;
      }

      if (url.includes('facebook.com') || url.includes('fb.com')) {
        document.getElementById('videoType').value = 'facebook';
        if (!document.getElementById('thumbnail').value) {
          showToast('Facebook videos need a manual thumbnail. Upload one via Browse.', 'warning');
        }
        return;
      }

      document.getElementById('videoType').value = 'other';
      showToast('Could not auto-detect thumbnail for this URL.', 'warning');
    });

    // Thumbnail preview
    function showThumbPreview(url) {
      document.getElementById('thumbPreview').classList.remove('hidden');
      document.getElementById('thumbPreviewImg').src = url;
    }
    function hideThumbPreview() {
      document.getElementById('thumbPreview').classList.add('hidden');
    }
    document.getElementById('thumbnail').addEventListener('input', function() {
      if (this.value.trim()) showThumbPreview(this.value.trim());
      else hideThumbPreview();
    });
  </script>
</AdminLayout2>
