---
import AdminLayout2 from '../../layouts/AdminLayout2.astro';
import AdminPageHeader from '../../components/admin/AdminPageHeader.astro';
---

<AdminLayout2 title="Feedback" currentPage="feedback">
  <AdminPageHeader title="Feedback" description="View and manage feedback, suggestions, and complaints">
    <span id="statusCount" class="text-sm text-gray-500"></span>
  </AdminPageHeader>

  <!-- Filter Tabs -->
  <div class="flex items-center gap-2 mb-6">
    <button data-filter="all" class="filter-btn px-3 py-1.5 rounded-lg text-sm font-medium bg-blue-50 text-blue-700 transition-colors">All</button>
    <button data-filter="new" class="filter-btn px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-100 transition-colors">New</button>
    <button data-filter="viewed" class="filter-btn px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-100 transition-colors">Viewed</button>
  </div>

  <!-- Feedback List -->
  <div id="feedbackList" class="space-y-3">
    <p class="text-gray-500 text-sm">Loading...</p>
  </div>

  <script is:inline>
    const API_URL = '/api/cms/feedback';
    let items = [];
    let activeFilter = 'all';

    document.addEventListener('DOMContentLoaded', () => {
      loadItems();

      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          activeFilter = btn.dataset.filter;
          document.querySelectorAll('.filter-btn').forEach(b => {
            b.className = 'filter-btn px-3 py-1.5 rounded-lg text-sm font-medium text-gray-600 hover:bg-gray-100 transition-colors';
          });
          btn.className = 'filter-btn px-3 py-1.5 rounded-lg text-sm font-medium bg-blue-50 text-blue-700 transition-colors';
          renderItems();
        });
      });
    });

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading feedback:', error);
        document.getElementById('feedbackList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load feedback</h3>
            <p class="text-red-600 text-sm">Please check your database connection and try again.</p>
            <button onclick="loadItems()" class="mt-3 text-sm font-medium text-red-700 hover:text-red-800">Retry</button>
          </div>
        `;
      }
    }

    function renderItems() {
      const container = document.getElementById('feedbackList');
      const filtered = activeFilter === 'all' ? items : items.filter(i => i.status === activeFilter);

      const newCount = items.filter(i => i.status === 'new').length;
      const viewedCount = items.filter(i => i.status === 'viewed').length;
      document.getElementById('statusCount').textContent = `${items.length} total \u00b7 ${newCount} new \u00b7 ${viewedCount} viewed`;

      if (filtered.length === 0) {
        container.innerHTML = `
          <div class="flex flex-col items-center justify-center py-16 text-center">
            <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center mb-4">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-gray-400"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>
            </div>
            <p class="text-sm text-gray-500">${activeFilter !== 'all' ? 'No feedback with this status.' : 'No feedback yet. Submissions will appear here.'}</p>
          </div>
        `;
        return;
      }

      container.innerHTML = filtered.map(item => `
        <div class="bg-white rounded-lg border border-gray-200 p-5 ${item.status === 'new' ? 'border-l-4 border-l-blue-500' : ''}">
          <div class="flex justify-between items-start gap-4">
            <div class="flex-1 min-w-0">
              <div class="flex items-center flex-wrap gap-2 mb-2">
                ${getCategoryBadge(item.category)}
                ${item.status === 'new' ? '<span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium bg-blue-50 text-blue-700 ring-1 ring-inset ring-blue-600/20">New</span>' : ''}
                <span class="text-gray-500 text-xs">
                  ${item.name ? escapeHtml(item.name) : '<em class="text-gray-400">Anonymous</em>'}
                  ${item.email ? ' &middot; <a href="mailto:' + escapeHtml(item.email) + '" class="text-blue-600 hover:underline">' + escapeHtml(item.email) + '</a>' : ''}
                </span>
              </div>
              <p class="text-sm text-gray-800 whitespace-pre-wrap break-words">${escapeHtml(item.message)}</p>
              <p class="text-gray-400 text-xs mt-2">${formatDate(item.created_at)}</p>
            </div>
            <div class="flex items-center gap-1 flex-shrink-0">
              ${item.status === 'new' ? `
                <button onclick="markViewed('${item.id}')" class="px-3 py-1.5 text-xs font-medium text-blue-700 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">Mark Viewed</button>
              ` : `
                <button onclick="markNew('${item.id}')" class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">Mark New</button>
              `}
              <button onclick="deleteItem('${item.id}')" class="p-1.5 rounded-lg text-gray-400 hover:text-red-600 hover:bg-red-50 transition-colors" title="Delete">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path></svg>
              </button>
            </div>
          </div>
        </div>
      `).join('');
    }

    function getCategoryBadge(category) {
      const styles = {
        feedback: 'bg-blue-50 text-blue-700 ring-blue-600/20',
        suggestion: 'bg-green-50 text-green-700 ring-green-600/20',
        complaint: 'bg-red-50 text-red-700 ring-red-600/20',
      };
      const style = styles[category] || styles.feedback;
      const label = category ? category.charAt(0).toUpperCase() + category.slice(1) : 'Feedback';
      return `<span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium ring-1 ring-inset ${style}">${label}</span>`;
    }

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function formatDate(dateStr) {
      if (!dateStr) return '';
      const d = new Date(dateStr);
      return d.toLocaleDateString('en-US', {
        year: 'numeric', month: 'short', day: 'numeric',
        hour: '2-digit', minute: '2-digit',
      });
    }

    window.markViewed = async function(id) {
      try {
        const res = await fetch(API_URL, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id, status: 'viewed' }),
        });
        if (!res.ok) throw new Error('Failed to update');
        showToast('Marked as viewed', 'success');
        await loadItems();
      } catch (e) { showToast('Error: ' + e.message, 'error'); }
    };

    window.markNew = async function(id) {
      try {
        const res = await fetch(API_URL, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id, status: 'new' }),
        });
        if (!res.ok) throw new Error('Failed to update');
        showToast('Marked as new', 'success');
        await loadItems();
      } catch (e) { showToast('Error: ' + e.message, 'error'); }
    };

    window.deleteItem = function(id) {
      showConfirm('confirm-dialog', async () => {
        try {
          const res = await fetch(API_URL, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id }),
          });
          if (!res.ok) throw new Error('Failed to delete');
          showToast('Feedback deleted', 'success');
          await loadItems();
        } catch (e) { showToast('Error: ' + e.message, 'error'); }
      }, { title: 'Delete Feedback', message: 'This feedback will be permanently removed.' });
    };
  </script>
</AdminLayout2>
