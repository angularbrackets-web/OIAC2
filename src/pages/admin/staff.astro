---
import AdminLayout2 from '../../layouts/AdminLayout2.astro';
import AdminPageHeader from '../../components/admin/AdminPageHeader.astro';
import AdminModal from '../../components/admin/AdminModal.astro';
import AdminMediaPicker from '../../components/admin/AdminMediaPicker.astro';
---

<AdminLayout2 title="Staff" currentPage="staff">
  <AdminPageHeader title="Staff" description="Manage staff members displayed on the website">
    <button id="addNewBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
      Add Staff Member
    </button>
  </AdminPageHeader>

  <!-- Filter by Staff Type -->
  <div id="filterBar" class="flex gap-2 mb-6 flex-wrap">
    <button data-filter="all" class="filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors bg-blue-50 text-blue-700">
      All
    </button>
  </div>

  <!-- Items List -->
  <div id="itemList" class="space-y-4">
    <p class="text-gray-500 text-sm">Loading...</p>
  </div>

  <AdminModal id="staff-modal" title="Add Staff Member">
    <form id="itemForm" class="space-y-4">
      <input type="hidden" id="itemId" />

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
        <input type="text" id="name" required
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
        <input type="text" id="staffTitle" placeholder="e.g. President, Vice President"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Staff Type *</label>
        <select id="staffType" required
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
          <option value="">Select type...</option>
          <option value="Imam">Imam</option>
          <option value="Board Member">Board Member</option>
          <option value="Office Staff">Office Staff</option>
          <option value="Homeschooling Teacher">Homeschooling Teacher</option>
          <option value="Weekend School Teacher">Weekend School Teacher</option>
          <option value="Bidaya Teacher">Bidaya Teacher</option>
        </select>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Description (HTML)</label>
        <textarea id="description" rows="5"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono"></textarea>
      </div>

      <!-- Profile Picture URL + media picker -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Profile Picture</label>
        <div class="flex gap-2">
          <input type="url" id="profilePictureUrl" placeholder="Paste image URL"
            class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
          <button type="button" id="browseMediaBtn"
            class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors whitespace-nowrap">
            Browse
          </button>
        </div>
        <div id="imgPreview" class="mt-3 hidden">
          <img id="imgPreviewImg" src="" alt="Preview" class="max-h-40 rounded-lg border border-gray-200" />
        </div>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
        <input type="number" id="displayOrder" min="0"
          class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
      </div>

      <Fragment slot="footer">
        <div class="flex justify-end gap-3">
          <button type="button" id="cancelBtn" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">Cancel</button>
          <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors">Save</button>
        </div>
      </Fragment>
    </form>
  </AdminModal>

  <AdminMediaPicker />

  <script is:inline>
    const API_URL = '/api/cms/staff';
    let items = [];
    let activeFilter = 'all';

    const STAFF_TYPES = ['Imam', 'Board Member', 'Office Staff', 'Homeschooling Teacher', 'Weekend School Teacher', 'Bidaya Teacher'];

    document.addEventListener('DOMContentLoaded', () => {
      loadItems();
      buildFilterButtons();
    });

    function buildFilterButtons() {
      const container = document.getElementById('filterBar');
      STAFF_TYPES.forEach(type => {
        const btn = document.createElement('button');
        btn.dataset.filter = type;
        btn.className = 'filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors text-gray-600 hover:bg-gray-100';
        btn.textContent = type;
        btn.addEventListener('click', () => {
          activeFilter = type;
          updateFilterButtons();
          renderItems();
        });
        container.appendChild(btn);
      });

      // Wire up the "All" button
      container.querySelector('[data-filter="all"]').addEventListener('click', () => {
        activeFilter = 'all';
        updateFilterButtons();
        renderItems();
      });
    }

    function updateFilterButtons() {
      document.querySelectorAll('.filter-btn').forEach(btn => {
        if (btn.dataset.filter === activeFilter) {
          btn.className = 'filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors bg-blue-50 text-blue-700';
        } else {
          btn.className = 'filter-btn px-3 py-1.5 rounded-lg text-sm font-medium transition-colors text-gray-600 hover:bg-gray-100';
        }
      });
    }

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading staff:', error);
        document.getElementById('itemList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load staff</h3>
            <p class="text-red-600 text-sm">Please check your database connection and try again.</p>
            <button onclick="loadItems()" class="mt-3 text-sm font-medium text-red-700 hover:text-red-800">Retry</button>
          </div>
        `;
      }
    }

    function renderItems() {
      const container = document.getElementById('itemList');
      const filtered = activeFilter === 'all' ? items : items.filter(i => i.staffType === activeFilter);

      if (items.length === 0) {
        container.innerHTML = `
          <div class="flex flex-col items-center justify-center py-16 text-center">
            <div class="w-12 h-12 rounded-full bg-gray-100 flex items-center justify-center mb-4">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="text-gray-400"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>
            </div>
            <p class="text-sm text-gray-500 mb-1">No staff members yet</p>
            <p class="text-xs text-gray-400">Click "Add Staff Member" to get started.</p>
          </div>
        `;
        return;
      }

      if (filtered.length === 0) {
        container.innerHTML = `
          <div class="flex flex-col items-center justify-center py-16 text-center">
            <p class="text-sm text-gray-500">No staff members in this category.</p>
          </div>
        `;
        return;
      }

      // Group by staff type
      const grouped = {};
      filtered.forEach(item => {
        if (!grouped[item.staffType]) grouped[item.staffType] = [];
        grouped[item.staffType].push(item);
      });

      container.innerHTML = Object.entries(grouped).map(([type, members]) => `
        <div class="mb-6">
          <h2 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">${escapeHtml(type)} (${members.length})</h2>
          <div class="space-y-2">
            ${members.map(item => `
              <div class="bg-white rounded-lg border border-gray-200 px-4 py-3 flex items-center justify-between">
                <div class="flex items-center gap-3 flex-1 min-w-0">
                  ${item.profilePictureUrl
                    ? `<img src="${escapeHtml(item.profilePictureUrl)}" alt="${escapeHtml(item.name)}" class="w-10 h-10 rounded-full object-cover flex-shrink-0" />`
                    : `<div class="w-10 h-10 rounded-full bg-gray-100 flex items-center justify-center flex-shrink-0 text-gray-400 text-sm font-medium">${item.name.charAt(0)}</div>`}
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center flex-wrap gap-2">
                      <p class="font-medium text-gray-900 text-sm">${escapeHtml(item.name)}</p>
                      <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium bg-gray-50 text-gray-600 ring-1 ring-inset ring-gray-500/20">${escapeHtml(item.staffType)}</span>
                    </div>
                    ${item.title ? `<p class="text-gray-500 text-xs mt-0.5">${escapeHtml(item.title)}</p>` : ''}
                  </div>
                </div>
                <div class="flex items-center gap-1 ml-4 flex-shrink-0">
                  <button onclick="editItem('${item.id}')" class="p-1.5 rounded-lg text-gray-400 hover:text-blue-600 hover:bg-blue-50 transition-colors" title="Edit">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M17 3a2.85 2.85 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path></svg>
                  </button>
                  <button onclick="deleteItem('${item.id}')" class="p-1.5 rounded-lg text-gray-400 hover:text-red-600 hover:bg-red-50 transition-colors" title="Delete">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M3 6h18"></path><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path></svg>
                  </button>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `).join('');
    }

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Modal
    const dialog = document.getElementById('staff-modal');
    const form = document.getElementById('itemForm');

    document.getElementById('addNewBtn').addEventListener('click', () => {
      dialog.querySelector('h2').textContent = 'Add Staff Member';
      form.reset();
      document.getElementById('itemId').value = '';
      hideImgPreview();
      dialog.showModal();
    });

    document.getElementById('cancelBtn').addEventListener('click', () => dialog.close());

    // Browse media
    document.getElementById('browseMediaBtn').addEventListener('click', () => {
      openMediaPicker('image', (url) => {
        document.getElementById('profilePictureUrl').value = url;
        showImgPreview(url);
      });
    });

    // Edit
    window.editItem = function(id) {
      const item = items.find(i => i.id === id);
      if (!item) return;

      dialog.querySelector('h2').textContent = 'Edit Staff Member';
      document.getElementById('itemId').value = item.id;
      document.getElementById('name').value = item.name;
      document.getElementById('staffTitle').value = item.title || '';
      document.getElementById('staffType').value = item.staffType;
      document.getElementById('description').value = item.description || '';
      document.getElementById('profilePictureUrl').value = item.profilePictureUrl || '';
      document.getElementById('displayOrder').value = item.displayOrder || '';

      if (item.profilePictureUrl) showImgPreview(item.profilePictureUrl);
      else hideImgPreview();

      dialog.showModal();
    };

    // Delete
    window.deleteItem = function(id) {
      const item = items.find(i => i.id === id);
      showConfirm('confirm-dialog', async () => {
        try {
          const res = await fetch(API_URL, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id })
          });
          if (!res.ok) throw new Error('Failed to delete');
          showToast('Staff member deleted', 'success');
          await loadItems();
        } catch (e) { showToast('Error: ' + e.message, 'error'); }
      }, { title: 'Delete Staff Member', message: item ? `"${item.name}" will be permanently removed.` : 'This staff member will be permanently removed.' });
    };

    // Submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;

      const data = {
        name: document.getElementById('name').value,
        title: document.getElementById('staffTitle').value || undefined,
        staffType: document.getElementById('staffType').value,
        description: document.getElementById('description').value || undefined,
        profilePictureUrl: document.getElementById('profilePictureUrl').value || undefined,
        displayOrder: parseInt(document.getElementById('displayOrder').value) || 0,
      };

      try {
        const res = await fetch(API_URL, {
          method: id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(id ? { id, ...data } : data)
        });
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to save');
        }
        dialog.close();
        showToast(id ? 'Staff member updated' : 'Staff member added', 'success');
        await loadItems();
      } catch (e) { showToast('Error: ' + e.message, 'error'); }
    });

    // Image preview
    function showImgPreview(url) {
      document.getElementById('imgPreview').classList.remove('hidden');
      document.getElementById('imgPreviewImg').src = url;
    }
    function hideImgPreview() {
      document.getElementById('imgPreview').classList.add('hidden');
      document.getElementById('imgPreviewImg').src = '';
    }
    document.getElementById('profilePictureUrl').addEventListener('input', function() {
      if (this.value.trim()) showImgPreview(this.value.trim());
      else hideImgPreview();
    });
  </script>
</AdminLayout2>
