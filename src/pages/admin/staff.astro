---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Staff" currentPage="staff">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Staff</h1>
      <p class="text-gray-600 mt-1">Manage staff members displayed on the website</p>
    </div>
    <button id="addNewBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-medium">
      + Add Staff Member
    </button>
  </div>

  <!-- Filter by Staff Type -->
  <div class="flex gap-2 mb-6 flex-wrap">
    <button data-filter="all" class="filter-btn px-4 py-2 rounded-lg font-medium text-sm bg-blue-600 text-white">
      All
    </button>
  </div>

  <!-- Items List -->
  <div id="itemList" class="space-y-4">
    <p class="text-gray-500">Loading...</p>
  </div>

  <!-- Add/Edit Modal -->
  <div id="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[90vh] overflow-y-auto mx-4">
      <h2 id="modalTitle" class="text-2xl font-bold mb-4">Add Staff Member</h2>
      <form id="itemForm" class="space-y-4">
        <input type="hidden" id="itemId" />

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Name *</label>
          <input type="text" id="name" required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
          <input type="text" id="staffTitle" placeholder="e.g. President, Vice President"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Staff Type *</label>
          <select id="staffType" required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="">Select type...</option>
            <option value="Imam">Imam</option>
            <option value="Board Member">Board Member</option>
            <option value="Office Staff">Office Staff</option>
            <option value="Homeschooling Teacher">Homeschooling Teacher</option>
            <option value="Weekend School Teacher">Weekend School Teacher</option>
            <option value="Bidaya Teacher">Bidaya Teacher</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Description (HTML)</label>
          <textarea id="description" rows="5"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 font-mono text-sm"></textarea>
        </div>

        <!-- Profile Picture URL + media picker -->
        <div class="border rounded-lg p-4 bg-blue-50">
          <h3 class="font-semibold text-blue-800 mb-2 flex items-center gap-2">
            <span>ðŸ“·</span> Profile Picture
          </h3>
          <div class="flex gap-2">
            <input type="url" id="profilePictureUrl" placeholder="Paste image URL"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <button type="button" onclick="openMediaPicker()"
              class="px-3 py-2 bg-gray-600 text-white text-sm rounded hover:bg-gray-700 whitespace-nowrap">
              Browse
            </button>
          </div>
          <div id="imgPreview" class="mt-3 hidden">
            <img id="imgPreviewImg" src="" alt="Preview" class="max-h-40 rounded border" />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
          <input type="number" id="displayOrder" min="0"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="flex justify-end gap-3 pt-4 border-t">
          <button type="button" id="cancelBtn" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Media Picker Modal -->
  <div id="mediaPickerModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-[60]">
    <div class="bg-white rounded-lg p-6 w-full max-w-3xl max-h-[90vh] overflow-y-auto mx-4">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Select Image</h2>
        <button onclick="closeMediaPicker()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>

      <div class="mb-4 p-4 bg-gray-50 rounded-lg">
        <label class="flex items-center justify-center gap-2 cursor-pointer text-blue-600 hover:text-blue-800">
          <span class="text-xl">ðŸ“¤</span>
          <span>Upload new image</span>
          <input type="file" id="pickerUploadInput" class="hidden"
            accept="image/jpeg,image/png,image/gif,image/webp,image/svg+xml,image/avif,.jpg,.jpeg,.png,.gif,.webp,.svg,.avif" />
        </label>
      </div>

      <div id="mediaPickerGrid" class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        <p class="col-span-full text-gray-500 text-center py-8">Loading media...</p>
      </div>
    </div>
  </div>

  <script is:inline>
    const API_URL = '/api/cms/staff';
    const MEDIA_API = '/api/cms/media';
    const MAX_FILE_SIZE = 4 * 1024 * 1024;
    let items = [];
    let mediaFiles = [];
    let activeFilter = 'all';

    const STAFF_TYPES = ['Imam', 'Board Member', 'Office Staff', 'Homeschooling Teacher', 'Weekend School Teacher', 'Bidaya Teacher'];

    const SEED_DATA = [
      { name: 'SHAIKH SAID AHMED', staffType: 'Imam', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/U3MjIRqTCeq1za9hkb2g', description: '<p>Over 10 years of experience teaching Islamic studies and delivering Da\'wah lectures.</p><p>Proficient in Quran recitation and teaching Quran Tafseer with proper Tajweed</p>', displayOrder: 0 },
      { name: 'SHAIKH AHMED SAEED', staffType: 'Imam', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/bIWR6kA0TQaPxZagUU5M', description: '<p>Over 15 years of experience as an Imam, a teacher, and a community leader.</p>', displayOrder: 0 },
      { name: 'SHAIKH YOUSUF ALALAGHI', staffType: 'Imam', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/PWUcNLB2Q21uqbfGy57w', description: '<p>Sheikh Yousuf Alalaghi with us in the centre.</p>', displayOrder: 0 },
      { name: 'Qusai Bawazir', staffType: 'Imam', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/0f4EMcYQiWhI5ZEPNTZw', description: '<p>Extensive experience in Qur\'anic instruction.</p>', displayOrder: 7 },
      { name: 'Dr. Osama Namaruish', title: 'President', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/GN0ZcavTRvmyakZcBqqw', displayOrder: 1 },
      { name: 'Dr. Mohamed Abufayed', title: 'Vice President', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/m2LXbeNhSIuIV2u7oaj0', displayOrder: 2 },
      { name: 'Dr. Ismail Taher', title: 'Director', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/nscxvzsjReuTRRF06TnR', displayOrder: 3 },
      { name: 'Dr. Adel Al Mighairbi', title: 'Director', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/6TF3rB6RRqjZvMMlObSo', displayOrder: 4 },
      { name: 'Yasir Mahmood Saeed', title: 'Treasurer', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/ZMTl03qRviVl4S252Q7z', displayOrder: 5 },
      { name: 'Masudur Rahman', title: 'Secretary', staffType: 'Board Member', profilePictureUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/pwf7odUkQwKKiH8kL5sw', displayOrder: 6 },
      { name: 'SHUAIB KADRI', staffType: 'Office Staff', displayOrder: 0 },
      { name: 'ASHFAQ HUSSAIN', staffType: 'Office Staff', displayOrder: 0 },
      { name: 'RAMEEL AHMAD', staffType: 'Office Staff', displayOrder: 0 },
      { name: 'HUDA KHURSHID', staffType: 'Homeschooling Teacher', displayOrder: 0 },
      { name: 'HAJIRA KHAN', staffType: 'Homeschooling Teacher', displayOrder: 0 },
      { name: 'FATIMA BUTOOL', staffType: 'Homeschooling Teacher', displayOrder: 0 },
      { name: 'SAIDA MUSA', staffType: 'Homeschooling Teacher', displayOrder: 0 },
      { name: 'SHAZIA TARIQ', staffType: 'Weekend School Teacher', displayOrder: 0 },
      { name: 'MAHMOOD BACHH', staffType: 'Weekend School Teacher', displayOrder: 0 },
      { name: 'AVIN FELMEZ', staffType: 'Bidaya Teacher', displayOrder: 0 },
      { name: 'ASMA ABOELEZZ', staffType: 'Bidaya Teacher', displayOrder: 0 },
    ];

    document.addEventListener('DOMContentLoaded', () => {
      loadItems();
      buildFilterButtons();

      document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          activeFilter = btn.dataset.filter;
          document.querySelectorAll('.filter-btn').forEach(b => {
            b.classList.remove('bg-blue-600', 'text-white');
            b.classList.add('bg-gray-200', 'text-gray-700');
          });
          btn.classList.remove('bg-gray-200', 'text-gray-700');
          btn.classList.add('bg-blue-600', 'text-white');
          renderItems();
        });
      });
    });

    function buildFilterButtons() {
      const container = document.querySelector('.flex.gap-2.mb-6');
      STAFF_TYPES.forEach(type => {
        const btn = document.createElement('button');
        btn.dataset.filter = type;
        btn.className = 'filter-btn px-4 py-2 rounded-lg font-medium text-sm bg-gray-200 text-gray-700 hover:bg-gray-300';
        btn.textContent = type;
        btn.addEventListener('click', () => {
          activeFilter = type;
          document.querySelectorAll('.filter-btn').forEach(b => {
            b.classList.remove('bg-blue-600', 'text-white');
            b.classList.add('bg-gray-200', 'text-gray-700');
          });
          btn.classList.remove('bg-gray-200', 'text-gray-700');
          btn.classList.add('bg-blue-600', 'text-white');
          renderItems();
        });
        container.appendChild(btn);
      });
    }

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading staff:', error);
        document.getElementById('itemList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load staff</h3>
            <p class="text-red-600 text-sm mb-3">
              The <code class="bg-red-100 px-1 rounded">oiac_staff</code> table may not exist yet.
              Create it in the Supabase SQL Editor:
            </p>
            <pre class="bg-red-100 text-red-800 p-3 rounded text-xs overflow-x-auto whitespace-pre-wrap">CREATE TABLE oiac_staff (
  id UUID PRIMARY KEY DEFAULT gen_random_uuid(),
  name TEXT NOT NULL,
  title TEXT,
  display_order INT DEFAULT 0,
  profile_picture_url TEXT,
  staff_type TEXT NOT NULL,
  description TEXT,
  created_at TIMESTAMPTZ DEFAULT now(),
  updated_at TIMESTAMPTZ DEFAULT now()
);</pre>
            <button onclick="loadItems()" class="mt-3 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm">Retry</button>
          </div>
        `;
      }
    }

    function renderItems() {
      const container = document.getElementById('itemList');
      const filtered = activeFilter === 'all' ? items : items.filter(i => i.staffType === activeFilter);

      if (items.length === 0) {
        container.innerHTML = `
          <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-8 text-center">
            <p class="text-gray-500 mb-2 text-lg font-medium">No staff members yet</p>
            <p class="text-gray-400 text-sm mb-5">
              Click below to import the existing staff members.
            </p>
            <button onclick="seedData()" id="seedBtn"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium">
              Seed Staff Data
            </button>
          </div>
        `;
        return;
      }

      if (filtered.length === 0) {
        container.innerHTML = `
          <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-8 text-center">
            <p class="text-gray-500">No staff members in this category.</p>
          </div>
        `;
        return;
      }

      // Group by staff type
      const grouped = {};
      filtered.forEach(item => {
        if (!grouped[item.staffType]) grouped[item.staffType] = [];
        grouped[item.staffType].push(item);
      });

      container.innerHTML = Object.entries(grouped).map(([type, members]) => `
        <div class="mb-6">
          <h2 class="text-xl font-bold text-gray-700 mb-3">${escapeHtml(type)} (${members.length})</h2>
          <div class="space-y-3">
            ${members.map((item, index) => `
              <div class="bg-white rounded-lg shadow p-4 flex justify-between items-start">
                <div class="flex gap-4 flex-1 min-w-0">
                  ${item.profilePictureUrl
                    ? `<img src="${escapeHtml(item.profilePictureUrl)}" alt="${escapeHtml(item.name)}" class="w-12 h-12 rounded-full object-cover flex-shrink-0" />`
                    : `<div class="w-12 h-12 rounded-full bg-gray-200 flex items-center justify-center flex-shrink-0 text-gray-400 text-lg">${item.name.charAt(0)}</div>`}
                  <div class="flex-1 min-w-0">
                    <h3 class="font-semibold text-lg">${escapeHtml(item.name)}</h3>
                    ${item.title ? `<p class="text-gray-500 text-sm">${escapeHtml(item.title)}</p>` : ''}
                    <p class="text-gray-400 text-xs mt-0.5">${escapeHtml(item.staffType)}</p>
                  </div>
                </div>
                <div class="flex gap-2 ml-4 flex-shrink-0">
                  <button onclick="editItem('${item.id}')" class="text-blue-600 hover:text-blue-800 px-3 py-1 border border-blue-600 rounded text-sm">Edit</button>
                  <button onclick="deleteItem('${item.id}')" class="text-red-600 hover:text-red-800 px-3 py-1 border border-red-600 rounded text-sm">Delete</button>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `).join('');
    }

    function escapeHtml(text) {
      if (!text) return '';
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // Seed
    window.seedData = async function() {
      const btn = document.getElementById('seedBtn');
      btn.textContent = 'Seeding...';
      btn.disabled = true;

      let success = 0;
      for (const item of SEED_DATA) {
        try {
          const res = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(item)
          });
          if (res.ok) success++;
        } catch (e) { console.error('Seed error:', e); }
      }

      if (success > 0) await loadItems();
      else { btn.textContent = 'Seed failed'; btn.disabled = false; }
    };

    // Modal
    const modal = document.getElementById('modal');
    const form = document.getElementById('itemForm');

    document.getElementById('addNewBtn').addEventListener('click', () => {
      document.getElementById('modalTitle').textContent = 'Add Staff Member';
      form.reset();
      document.getElementById('itemId').value = '';
      hideImgPreview();
      showModal();
    });

    document.getElementById('cancelBtn').addEventListener('click', hideModal);
    modal.addEventListener('click', (e) => { if (e.target === modal) hideModal(); });

    function showModal() { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    function hideModal() { modal.classList.add('hidden'); modal.classList.remove('flex'); }

    // Edit
    window.editItem = function(id) {
      const item = items.find(i => i.id === id);
      if (!item) return;

      document.getElementById('modalTitle').textContent = 'Edit Staff Member';
      document.getElementById('itemId').value = item.id;
      document.getElementById('name').value = item.name;
      document.getElementById('staffTitle').value = item.title || '';
      document.getElementById('staffType').value = item.staffType;
      document.getElementById('description').value = item.description || '';
      document.getElementById('profilePictureUrl').value = item.profilePictureUrl || '';
      document.getElementById('displayOrder').value = item.displayOrder || '';

      if (item.profilePictureUrl) showImgPreview(item.profilePictureUrl);
      else hideImgPreview();

      showModal();
    };

    // Delete
    window.deleteItem = async function(id) {
      if (!confirm('Delete this staff member?')) return;
      try {
        const res = await fetch(API_URL, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id })
        });
        if (!res.ok) throw new Error('Failed to delete');
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    };

    // Submit
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;

      const data = {
        name: document.getElementById('name').value,
        title: document.getElementById('staffTitle').value || undefined,
        staffType: document.getElementById('staffType').value,
        description: document.getElementById('description').value || undefined,
        profilePictureUrl: document.getElementById('profilePictureUrl').value || undefined,
        displayOrder: parseInt(document.getElementById('displayOrder').value) || 0,
      };

      try {
        const res = await fetch(API_URL, {
          method: id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(id ? { id, ...data } : data)
        });
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to save');
        }
        hideModal();
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    });

    // Image preview
    function showImgPreview(url) {
      document.getElementById('imgPreview').classList.remove('hidden');
      document.getElementById('imgPreviewImg').src = url;
    }
    function hideImgPreview() {
      document.getElementById('imgPreview').classList.add('hidden');
    }
    document.getElementById('profilePictureUrl').addEventListener('input', function() {
      if (this.value.trim()) showImgPreview(this.value.trim());
      else hideImgPreview();
    });

    // Media Picker
    window.openMediaPicker = async function() {
      try {
        const res = await fetch(MEDIA_API);
        mediaFiles = await res.json();
      } catch (e) { mediaFiles = []; }
      renderMediaPicker();
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.remove('hidden');
      picker.classList.add('flex');
    };

    window.closeMediaPicker = function() {
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.add('hidden');
      picker.classList.remove('flex');
    };

    function renderMediaPicker() {
      const grid = document.getElementById('mediaPickerGrid');
      const images = mediaFiles.filter(f => f.type === 'image');

      if (images.length === 0) {
        grid.innerHTML = '<p class="col-span-full text-gray-500 text-center py-8">No images in library. Upload one above.</p>';
        return;
      }

      grid.innerHTML = images.map(file => `
        <div class="cursor-pointer rounded-lg overflow-hidden border-2 border-transparent hover:border-blue-500 transition"
             onclick="selectImage('${file.url}')">
          <img src="${file.url}" class="aspect-square object-cover" />
          <p class="text-xs p-1 truncate bg-gray-100">${file.name}</p>
        </div>
      `).join('');
    }

    window.selectImage = function(url) {
      document.getElementById('profilePictureUrl').value = url;
      showImgPreview(url);
      closeMediaPicker();
    };

    document.getElementById('pickerUploadInput').addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      if (file.size > MAX_FILE_SIZE) {
        alert('File is too large (' + (file.size / 1024 / 1024).toFixed(1) + ' MB). Max is 4 MB.');
        e.target.value = '';
        return;
      }

      const formData = new FormData();
      formData.append('file', file);

      try {
        const res = await fetch(MEDIA_API, { method: 'POST', body: formData });
        if (!res.ok) throw new Error('Upload failed');
        const result = await res.json();
        selectImage(result.url);
      } catch (err) { alert('Upload error: ' + err.message); }

      e.target.value = '';
    });

    document.getElementById('mediaPickerModal').addEventListener('click', (e) => {
      if (e.target.id === 'mediaPickerModal') closeMediaPicker();
    });
  </script>
</AdminLayout>
