---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Posters" currentPage="posters">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Posters</h1>
      <p class="text-gray-600 mt-1">Manage poster images shown on the home page carousel and /programs page</p>
    </div>
    <button id="addNewBtn" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded font-medium">
      + Add Poster
    </button>
  </div>

  <!-- Items List -->
  <div id="posterList" class="space-y-4">
    <p class="text-gray-500">Loading...</p>
  </div>

  <!-- Add/Edit Modal -->
  <div id="modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 w-full max-w-2xl max-h-[90vh] overflow-y-auto mx-4">
      <h2 id="modalTitle" class="text-2xl font-bold mb-4">Add New Poster</h2>
      <form id="posterForm" class="space-y-4">
        <input type="hidden" id="itemId" />

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Title *</label>
          <input type="text" id="title" required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <!-- Image URL + media picker -->
        <div class="border rounded-lg p-4 bg-blue-50">
          <h3 class="font-semibold text-blue-800 mb-2 flex items-center gap-2">
            <span>üñºÔ∏è</span> Poster Image *
          </h3>
          <div class="flex gap-2">
            <input type="url" id="imageUrl" required placeholder="Paste image URL"
              class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <button type="button" onclick="openMediaPicker()"
              class="px-3 py-2 bg-gray-600 text-white text-sm rounded hover:bg-gray-700 whitespace-nowrap">
              Browse
            </button>
          </div>
          <div id="imgPreview" class="mt-3 hidden">
            <img id="imgPreviewImg" src="" alt="Poster preview" class="max-h-40 rounded border" />
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Link Text</label>
            <input type="text" id="linkText"
              placeholder="e.g. Academy Admission Form"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
            <input type="number" id="displayOrder" min="1"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
              placeholder="1, 2, 3..." />
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Link URL</label>
          <input type="url" id="linkUrl"
            placeholder="https://..."
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="flex justify-end gap-3 pt-4 border-t">
          <button type="button" id="cancelBtn" class="px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50">Cancel</button>
          <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Save</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Media Picker Modal -->
  <div id="mediaPickerModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-[60]">
    <div class="bg-white rounded-lg p-6 w-full max-w-3xl max-h-[90vh] overflow-y-auto mx-4">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold">Select Image</h2>
        <button onclick="closeMediaPicker()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>

      <!-- Upload in picker -->
      <div class="mb-4 p-4 bg-gray-50 rounded-lg">
        <label class="flex items-center justify-center gap-2 cursor-pointer text-blue-600 hover:text-blue-800">
          <span class="text-xl">üì§</span>
          <span>Upload new image</span>
          <input type="file" id="pickerUploadInput" class="hidden"
            accept="image/jpeg,image/png,image/gif,image/webp,image/svg+xml,image/avif,.jpg,.jpeg,.png,.gif,.webp,.svg,.avif" />
        </label>
      </div>

      <div id="mediaPickerGrid" class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3">
        <p class="col-span-full text-gray-500 text-center py-8">Loading media...</p>
      </div>
    </div>
  </div>

  <script is:inline>
    const API_URL = '/api/cms/posters';
    const MEDIA_API = '/api/cms/media';
    const MAX_FILE_SIZE = 4 * 1024 * 1024;
    let items = [];
    let mediaFiles = [];

    const SEED_DATA = [
      {
        title: 'Register Now!',
        imageUrl: '/images/uploads/oia_academy_reg_open_2026_2027.jpeg',
        linkText: 'Academy Admission Form',
        linkUrl: 'https://schools.mybrightwheel.com/sign-in?redirect_path=/admissions/packet/18687851-5b43-4573-aec3-f5c2f6a58a2a/fill?school_id=5c2941b1-e504-460e-8070-722769ebd082',
        displayOrder: 1
      },
      {
        title: 'Weekend Islamic School',
        imageUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/cmeixz8nxccu107liogtz4fwz',
        linkText: 'Weekend Admission Form',
        linkUrl: 'https://schools.mybrightwheel.com/sign-in?redirect_path=/admissions/packet/0cc028b8-3265-48de-a375-9b5145d6575d/fill?school_id=5c2941b1-e504-460e-8070-722769ebd082',
        displayOrder: 2
      },
      {
        title: "Qur'anic Light",
        imageUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/cmeixyjt3cbxd07liaa6efwnk',
        linkText: "Qur'anic Light Admission Form",
        linkUrl: 'https://schools.mybrightwheel.com/sign-in?redirect_path=/admissions/packet/1dedd19d-857a-4ce2-8d23-7221dd025ac2/fill?school_id=5c2941b1-e504-460e-8070-722769ebd082',
        displayOrder: 3
      },
      {
        title: 'Quran Beginner/Bidaya',
        imageUrl: 'https://us-west-2.graphassets.com/A3KPYik2OQHK7UERpP1XVz/cmeixxkqhcape07mz1pb9s8g5',
        linkText: 'Bidaya Admission Form',
        linkUrl: 'https://schools.mybrightwheel.com/sign-in?redirect_path=/admissions/packet/30692370-0500-435d-96fe-9754059e2418/fill?school_id=5c2941b1-e504-460e-8070-722769ebd082',
        displayOrder: 4
      },
      {
        title: 'Winter Quran Camp',
        imageUrl: '/images/uploads/oiac_winterqurancamp2025.jpeg',
        linkText: 'Register',
        linkUrl: 'https://schools.mybrightwheel.com/sign-in?redirect_path=/admissions/packet/423254f7-f3a9-4bdf-9a77-7f0164db358a/fill?school_id=5c2941b1-e504-460e-8070-722769ebd082',
        displayOrder: 100
      }
    ];

    document.addEventListener('DOMContentLoaded', loadItems);

    async function loadItems() {
      try {
        const response = await fetch(API_URL);
        if (!response.ok) {
          const err = await response.json();
          throw new Error(err.error || 'Unknown error');
        }
        items = await response.json();
        renderItems();
      } catch (error) {
        console.error('Error loading posters:', error);
        document.getElementById('posterList').innerHTML = `
          <div class="bg-red-50 border border-red-200 rounded-lg p-6">
            <h3 class="font-semibold text-red-800 mb-2">Could not load posters</h3>
            <p class="text-red-600 text-sm mb-3">
              The <code class="bg-red-100 px-1 rounded">oiac_posters</code> table may not exist yet.
              Create it in the Supabase SQL Editor with this query:
            </p>
            <pre class="bg-red-100 text-red-800 p-3 rounded text-xs overflow-x-auto whitespace-pre-wrap">CREATE TABLE IF NOT EXISTS oiac_posters (
  id UUID DEFAULT gen_random_uuid() PRIMARY KEY,
  title VARCHAR(255) NOT NULL,
  image_url TEXT NOT NULL,
  link_text TEXT,
  link_url TEXT,
  display_order INTEGER,
  created_at TIMESTAMP WITH TIME ZONE DEFAULT NOW(),
  updated_at TIMESTAMP WITH TIME ZONE DEFAULT NOW()
);</pre>
            <button onclick="loadItems()" class="mt-3 bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded text-sm">Retry</button>
          </div>
        `;
      }
    }

    function renderItems() {
      const container = document.getElementById('posterList');

      if (items.length === 0) {
        container.innerHTML = `
          <div class="bg-white rounded-lg border-2 border-dashed border-gray-300 p-8 text-center">
            <p class="text-gray-500 mb-2 text-lg font-medium">No posters yet</p>
            <p class="text-gray-400 text-sm mb-5">
              Click the button below to import the 5 posters currently used on the home page and /programs page.
            </p>
            <button onclick="seedData()" id="seedBtn"
              class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded font-medium">
              Seed Poster Data
            </button>
          </div>
        `;
        return;
      }

      container.innerHTML = items.map(item => `
        <div class="bg-white rounded-lg shadow p-4 flex justify-between items-start">
          <div class="flex gap-4 flex-1 min-w-0">
            <!-- Image preview -->
            <div class="flex-shrink-0 w-24">
              <img src="${escapeHtml(item.imageUrl)}" alt="${escapeHtml(item.title)}" class="w-24 h-16 object-cover rounded border" />
            </div>
            <!-- Info -->
            <div class="flex-1 min-w-0">
              <div class="flex items-center flex-wrap gap-2">
                <h3 class="font-semibold text-lg">${escapeHtml(item.title)}</h3>
                ${item.displayOrder ? `<span class="text-xs text-gray-400">#${item.displayOrder}</span>` : ''}
              </div>
              ${item.linkText ? `<p class="text-gray-500 text-sm mt-0.5">${escapeHtml(item.linkText)}</p>` : ''}
              ${item.linkUrl ? `<p class="text-blue-500 text-xs mt-0.5 truncate">${escapeHtml(item.linkUrl)}</p>` : ''}
            </div>
          </div>
          <div class="flex gap-2 ml-4 flex-shrink-0">
            <button onclick="editItem('${item.id}')" class="text-blue-600 hover:text-blue-800 px-3 py-1 border border-blue-600 rounded text-sm">
              Edit
            </button>
            <button onclick="deleteItem('${item.id}')" class="text-red-600 hover:text-red-800 px-3 py-1 border border-red-600 rounded text-sm">
              Delete
            </button>
          </div>
        </div>
      `).join('');
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // ‚îÄ‚îÄ Seed ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.seedData = async function() {
      const btn = document.getElementById('seedBtn');
      btn.textContent = 'Seeding‚Ä¶';
      btn.disabled = true;

      let success = 0;
      for (const item of SEED_DATA) {
        try {
          const res = await fetch(API_URL, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(item)
          });
          if (res.ok) success++;
          else console.error('Seed failed for', item.title, await res.json());
        } catch (e) {
          console.error('Seed error for', item.title, e);
        }
      }

      if (success > 0) {
        await loadItems();
      } else {
        btn.textContent = 'Seed failed ‚Äî check console';
        btn.disabled = false;
      }
    };

    // ‚îÄ‚îÄ Modal ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    const modal = document.getElementById('modal');
    const form  = document.getElementById('posterForm');

    document.getElementById('addNewBtn').addEventListener('click', () => {
      document.getElementById('modalTitle').textContent = 'Add New Poster';
      form.reset();
      document.getElementById('itemId').value = '';
      hideImgPreview();
      showModal();
    });

    document.getElementById('cancelBtn').addEventListener('click', hideModal);
    modal.addEventListener('click', (e) => { if (e.target === modal) hideModal(); });

    function showModal() { modal.classList.remove('hidden'); modal.classList.add('flex'); }
    function hideModal() { modal.classList.add('hidden');   modal.classList.remove('flex'); }

    // ‚îÄ‚îÄ Edit ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.editItem = function(id) {
      const item = items.find(i => i.id === id);
      if (!item) return;

      document.getElementById('modalTitle').textContent = 'Edit Poster';
      document.getElementById('itemId').value        = item.id;
      document.getElementById('title').value         = item.title;
      document.getElementById('imageUrl').value      = item.imageUrl;
      document.getElementById('linkText').value      = item.linkText || '';
      document.getElementById('linkUrl').value       = item.linkUrl || '';
      document.getElementById('displayOrder').value  = item.displayOrder || '';

      if (item.imageUrl) showImgPreview(item.imageUrl);
      else hideImgPreview();

      showModal();
    };

    // ‚îÄ‚îÄ Delete ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.deleteItem = async function(id) {
      if (!confirm('Delete this poster?')) return;
      try {
        const res = await fetch(API_URL, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ id })
        });
        if (!res.ok) throw new Error('Failed to delete');
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    };

    // ‚îÄ‚îÄ Submit ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;

      const data = {
        title:        document.getElementById('title').value,
        imageUrl:     document.getElementById('imageUrl').value,
        linkText:     document.getElementById('linkText').value || undefined,
        linkUrl:      document.getElementById('linkUrl').value || undefined,
        displayOrder: document.getElementById('displayOrder').value
                        ? parseInt(document.getElementById('displayOrder').value)
                        : undefined
      };

      try {
        const res = await fetch(API_URL, {
          method:  id ? 'PUT' : 'POST',
          headers: { 'Content-Type': 'application/json' },
          body:    JSON.stringify(id ? { id, ...data } : data)
        });
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to save');
        }
        hideModal();
        await loadItems();
      } catch (e) { alert('Error: ' + e.message); }
    });

    // ‚îÄ‚îÄ Image preview ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    function showImgPreview(url) {
      document.getElementById('imgPreview').classList.remove('hidden');
      document.getElementById('imgPreviewImg').src = url;
    }
    function hideImgPreview() {
      document.getElementById('imgPreview').classList.add('hidden');
    }
    document.getElementById('imageUrl').addEventListener('input', function() {
      if (this.value.trim()) showImgPreview(this.value.trim());
      else hideImgPreview();
    });

    // ‚îÄ‚îÄ Media Picker ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
    window.openMediaPicker = async function() {
      try {
        const res = await fetch(MEDIA_API);
        mediaFiles = await res.json();
      } catch (e) { mediaFiles = []; }
      renderMediaPicker();
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.remove('hidden');
      picker.classList.add('flex');
    };

    window.closeMediaPicker = function() {
      const picker = document.getElementById('mediaPickerModal');
      picker.classList.add('hidden');
      picker.classList.remove('flex');
    };

    function renderMediaPicker() {
      const grid   = document.getElementById('mediaPickerGrid');
      const images = mediaFiles.filter(f => f.type === 'image');

      if (images.length === 0) {
        grid.innerHTML = '<p class="col-span-full text-gray-500 text-center py-8">No images in library. Upload one above.</p>';
        return;
      }

      grid.innerHTML = images.map(file => `
        <div class="cursor-pointer rounded-lg overflow-hidden border-2 border-transparent hover:border-blue-500 transition"
             onclick="selectImage('${file.url}')">
          <img src="${file.url}" class="aspect-square object-cover" />
          <p class="text-xs p-1 truncate bg-gray-100">${file.name}</p>
        </div>
      `).join('');
    }

    window.selectImage = function(url) {
      document.getElementById('imageUrl').value = url;
      showImgPreview(url);
      closeMediaPicker();
    };

    // Upload from inside picker
    document.getElementById('pickerUploadInput').addEventListener('change', async (e) => {
      const file = e.target.files[0];
      if (!file) return;

      if (file.size > MAX_FILE_SIZE) {
        alert('File is too large (' + (file.size / 1024 / 1024).toFixed(1) + ' MB). Max is 4 MB.');
        e.target.value = '';
        return;
      }

      const formData = new FormData();
      formData.append('file', file);

      try {
        const res = await fetch(MEDIA_API, { method: 'POST', body: formData });
        if (!res.ok) throw new Error('Upload failed');
        const result = await res.json();
        selectImage(result.url);
      } catch (err) { alert('Upload error: ' + err.message); }

      e.target.value = '';
    });

    // Close picker on backdrop click
    document.getElementById('mediaPickerModal').addEventListener('click', (e) => {
      if (e.target.id === 'mediaPickerModal') closeMediaPicker();
    });
  </script>
</AdminLayout>
