---
import AdminLayout from '../../layouts/AdminLayout.astro';
---

<AdminLayout title="Media Library" currentPage="media">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-800">Media Library</h1>
      <p class="text-gray-600 mt-1">Upload and manage images and videos</p>
    </div>
    <label class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded cursor-pointer font-medium">
      + Upload File
      <input type="file" id="fileInput" class="hidden" accept="image/*,video/*" multiple />
    </label>
  </div>

  <!-- Upload Progress -->
  <div id="uploadProgress" class="hidden mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex items-center gap-3">
      <div class="animate-spin w-5 h-5 border-2 border-blue-600 border-t-transparent rounded-full"></div>
      <span class="text-blue-800">Uploading...</span>
    </div>
  </div>

  <!-- Drag & Drop Area -->
  <div id="dropZone" class="mb-6 border-2 border-dashed border-gray-300 rounded-lg p-8 text-center bg-white transition hover:border-blue-400 hover:bg-blue-50">
    <div class="text-4xl mb-2">ðŸ“¤</div>
    <p class="text-gray-600">Drag & drop files here, or click "Upload File" above</p>
    <p class="text-gray-400 text-sm mt-1">Supports images (JPG, PNG, GIF, WebP) and videos (MP4, WebM)</p>
  </div>

  <!-- Media Grid -->
  <div id="mediaGrid" class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
    <p class="col-span-full text-gray-500">Loading media...</p>
  </div>

  <!-- Preview Modal -->
  <div id="previewModal" class="fixed inset-0 bg-black bg-opacity-75 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-4 max-w-4xl max-h-[90vh] overflow-auto mx-4">
      <div class="flex justify-between items-center mb-4">
        <h3 id="previewTitle" class="font-semibold text-lg">File Preview</h3>
        <button onclick="closePreview()" class="text-gray-500 hover:text-gray-700 text-2xl">&times;</button>
      </div>
      <div id="previewContent" class="mb-4"></div>
      <div class="flex justify-between items-center">
        <input type="text" id="previewUrl" readonly class="flex-1 px-3 py-2 border rounded-l bg-gray-50 text-sm" />
        <button onclick="copyUrl()" class="bg-blue-600 text-white px-4 py-2 rounded-r hover:bg-blue-700">Copy URL</button>
      </div>
      <div class="mt-4 flex justify-end gap-3">
        <button onclick="deleteFile()" class="px-4 py-2 border border-red-500 text-red-500 rounded hover:bg-red-50">
          Delete File
        </button>
      </div>
    </div>
  </div>

  <script is:inline>
    const MEDIA_API = '/api/cms/media';
    let mediaFiles = [];
    let currentFile = null;

    document.addEventListener('DOMContentLoaded', loadMedia);

    // File input handler
    document.getElementById('fileInput').addEventListener('change', async (e) => {
      await uploadFiles(e.target.files);
      e.target.value = '';
    });

    // Drag & drop handlers
    const dropZone = document.getElementById('dropZone');

    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('border-blue-500', 'bg-blue-50');
    });

    dropZone.addEventListener('dragleave', () => {
      dropZone.classList.remove('border-blue-500', 'bg-blue-50');
    });

    dropZone.addEventListener('drop', async (e) => {
      e.preventDefault();
      dropZone.classList.remove('border-blue-500', 'bg-blue-50');
      await uploadFiles(e.dataTransfer.files);
    });

    // File size limit (4MB to be safe with Vercel's 4.5MB limit)
    const MAX_FILE_SIZE = 4 * 1024 * 1024;

    async function uploadFiles(files) {
      if (files.length === 0) return;

      const progress = document.getElementById('uploadProgress');
      progress.classList.remove('hidden');

      for (const file of files) {
        // Check file size
        if (file.size > MAX_FILE_SIZE) {
          alert(`File "${file.name}" is too large (${formatSize(file.size)}). Maximum size is 4MB. Please compress or resize before uploading.`);
          continue;
        }

        const formData = new FormData();
        formData.append('file', file);

        try {
          const response = await fetch(MEDIA_API, {
            method: 'POST',
            body: formData
          });

          if (!response.ok) {
            if (response.status === 413) {
              throw new Error('File too large. Server limit is 4MB.');
            }
            const err = await response.json();
            throw new Error(err.error || 'Upload failed');
          }
        } catch (error) {
          alert('Error uploading ' + file.name + ': ' + error.message);
        }
      }

      progress.classList.add('hidden');
      await loadMedia();
    }

    async function loadMedia() {
      try {
        const response = await fetch(MEDIA_API);
        mediaFiles = await response.json();
        renderMedia();
      } catch (error) {
        console.error('Error loading media:', error);
        document.getElementById('mediaGrid').innerHTML =
          '<p class="col-span-full text-red-500">Error loading media</p>';
      }
    }

    function renderMedia() {
      const grid = document.getElementById('mediaGrid');

      if (mediaFiles.length === 0) {
        grid.innerHTML = '<p class="col-span-full text-gray-500 bg-white rounded-lg p-8 text-center">No media files yet. Upload some!</p>';
        return;
      }

      grid.innerHTML = mediaFiles.map(file => `
        <div class="bg-white rounded-lg shadow overflow-hidden cursor-pointer hover:shadow-lg transition"
             onclick="showPreview('${file.name}')">
          <div class="aspect-square bg-gray-100 flex items-center justify-center overflow-hidden">
            ${file.type === 'video'
              ? `<div class="text-4xl">ðŸŽ¥</div>`
              : `<img src="${file.url}" alt="${file.name}" class="w-full h-full object-cover" />`
            }
          </div>
          <div class="p-2">
            <p class="text-xs text-gray-600 truncate">${file.name}</p>
            <p class="text-xs text-gray-400">${formatSize(file.size)}</p>
          </div>
        </div>
      `).join('');
    }

    function formatSize(bytes) {
      if (bytes < 1024) return bytes + ' B';
      if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + ' KB';
      return (bytes / (1024 * 1024)).toFixed(1) + ' MB';
    }

    window.showPreview = function(fileName) {
      currentFile = mediaFiles.find(f => f.name === fileName);
      if (!currentFile) return;

      document.getElementById('previewTitle').textContent = currentFile.name;
      document.getElementById('previewUrl').value = currentFile.url;

      const content = document.getElementById('previewContent');
      if (currentFile.type === 'video') {
        content.innerHTML = `<video src="${currentFile.url}" controls class="max-w-full max-h-96 mx-auto"></video>`;
      } else {
        content.innerHTML = `<img src="${currentFile.url}" alt="${currentFile.name}" class="max-w-full max-h-96 mx-auto" />`;
      }

      const modal = document.getElementById('previewModal');
      modal.classList.remove('hidden');
      modal.classList.add('flex');
    };

    window.closePreview = function() {
      const modal = document.getElementById('previewModal');
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      currentFile = null;
    };

    window.copyUrl = function() {
      const input = document.getElementById('previewUrl');
      input.select();
      navigator.clipboard.writeText(input.value);
      alert('URL copied to clipboard!');
    };

    window.deleteFile = async function() {
      if (!currentFile) return;
      if (!confirm('Are you sure you want to delete ' + currentFile.name + '?')) return;

      try {
        const response = await fetch(MEDIA_API, {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ fileName: currentFile.name })
        });

        if (!response.ok) throw new Error('Delete failed');

        closePreview();
        await loadMedia();
      } catch (error) {
        alert('Error deleting file: ' + error.message);
      }
    };

    document.getElementById('previewModal').addEventListener('click', (e) => {
      if (e.target.id === 'previewModal') closePreview();
    });
  </script>
</AdminLayout>
